{% extends 'admin/base_admin.html.twig' %}

{% block title %}Caractéristiques{% endblock %}

{% block page_title %}Caractéristiques produits{% endblock %}

{% block body %}
    <div class="flex justify-end mb-6">
        <a href="{{ path('admin_caracteristiques_new') }}" class="btn-primary">+ Nouvelle Caractéristique</a>
    </div>

    <div class="card overflow-hidden">
        {% if caracteristiques|length > 0 %}
            <table class="w-full">
                <thead class="bg-gray-50 border-b">
                    <tr>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Nom</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Type</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Valeurs possibles</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Obligatoire</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y">
                    {% for carac in caracteristiques %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 font-semibold">{{ carac.nom }}</td>
                            <td class="px-6 py-4">
                                {% set type = carac.type is defined ? carac.type : 'text' %}
                                {% if type == 'color' %}
                                    <span class="px-2 py-1 bg-purple-100 text-purple-800 rounded text-xs font-medium">Couleur</span>
                                {% elseif type == 'select' %}
                                    <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded text-xs font-medium">Sélection</span>
                                {% else %}
                                    <span class="px-2 py-1 bg-gray-100 text-gray-800 rounded text-xs font-medium">Texte</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4">
                                {% set valeurs = carac.valeursArray %}
                                {% if valeurs|length > 0 %}
                                    <div class="flex flex-wrap gap-1">
                                        {% for valeur in valeurs|slice(0, 4) %}
                                            <span class="px-2 py-0.5 bg-accent text-dark rounded text-xs">{{ valeur }}</span>
                                        {% endfor %}
                                        {% if valeurs|length > 4 %}
                                            <span class="px-2 py-0.5 bg-gray-100 text-gray-600 rounded text-xs">+{{ valeurs|length - 4 }}</span>
                                        {% endif %}
                                    </div>
                                {% else %}
                                    <span class="text-gray-400 text-sm">Aucune valeur</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4">
                                {% if carac.obligatoire %}
                                    <span class="px-3 py-1 bg-red-100 text-red-800 rounded-full text-xs font-semibold">Oui</span>
                                {% else %}
                                    <span class="px-3 py-1 bg-gray-100 text-gray-600 rounded-full text-xs font-semibold">Non</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex gap-2">
                                    <a href="{{ path('admin_caracteristiques_edit', {id: carac.id}) }}" class="text-primary hover:text-secondary">Modifier</a>
                                    <form method="post" action="{{ path('admin_caracteristiques_delete', {id: carac.id}) }}" onsubmit="return confirm('Supprimer cette caractéristique ?');">
                                        <button type="submit" class="text-red-600 hover:text-red-700">Supprimer</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="text-center py-16">
                <p class="text-gray-500 mb-4">Aucune caractéristique définie</p>
                <a href="{{ path('admin_caracteristiques_new') }}" class="btn-primary">Créer la première caractéristique</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
