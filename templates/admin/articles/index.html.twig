{% extends 'admin/base_admin.html.twig' %}

{% block title %}Articles{% endblock %}

{% block page_title %}Articles{% endblock %}
{% block page_subtitle %}
    <p class="text-sm text-gray-600">Gérez vos articles - {{ total }} article{{ total > 1 ? 's' : '' }} au total</p>
{% endblock %}

{% block body %}
    <div class="flex justify-between items-center mb-6">
        {# Recherche #}
        <form method="get" class="flex gap-4">
            <input type="text" name="search" value="{{ search }}" placeholder="Rechercher un article..." class="form-input w-80">
            <button type="submit" class="btn-primary">Rechercher</button>
            {% if search %}
                <a href="{{ path('admin_articles') }}" class="btn-outline">Réinitialiser</a>
            {% endif %}
        </form>

        {# Nouveau #}
        <a href="{{ path('admin_articles_new') }}" class="btn-primary">
            + Nouvel Article
        </a>
    </div>

    <div class="card overflow-hidden">
        {% if articles|length > 0 %}
            <table class="w-full">
                <thead class="bg-gray-50 border-b">
                    <tr>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Nom</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Prix</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Stock</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Variantes</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Statut</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y">
                    {% for article in articles %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    {% if article.images|length > 0 %}
                                        <img src="{{ article.images[0] }}" alt="{{ article.nom }}" class="w-12 h-12 object-cover rounded-lg">
                                    {% else %}
                                        <div class="w-12 h-12 bg-gray-200 rounded-lg"></div>
                                    {% endif %}
                                    <div>
                                        <div class="font-semibold">{{ article.nom }}</div>
                                        <div class="text-sm text-gray-500">{{ article.slug }}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 font-semibold">{{ article.prix|number_format(2, ',', ' ') }} €</td>
                            <td class="px-6 py-4">
                                <span class="px-2 py-1 text-sm rounded {{ article.stock > 10 ? 'bg-green-100 text-green-800' : (article.stock > 0 ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800') }}">
                                    {{ article.stock }}
                                </span>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-600">
                                {{ article.variantes|length }} variante{{ article.variantes|length > 1 ? 's' : '' }}
                            </td>
                            <td class="px-6 py-4">
                                {% if article.actif %}
                                    <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-xs font-semibold">Actif</span>
                                {% else %}
                                    <span class="px-3 py-1 bg-gray-100 text-gray-800 rounded-full text-xs font-semibold">Inactif</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex gap-2">
                                    <a href="{{ path('admin_articles_edit', {id: article._id}) }}" class="text-primary hover:text-secondary">Modifier</a>
                                    <form method="post" action="{{ path('admin_articles_delete', {id: article._id}) }}" onsubmit="return confirm('Supprimer cet article ?');">
                                        <button type="submit" class="text-red-600 hover:text-red-700">Supprimer</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            {# Pagination #}
            {% if totalPages > 1 %}
                <div class="px-6 py-4 border-t bg-gray-50 flex justify-center">
                    <nav class="flex gap-2">
                        {% if currentPage > 1 %}
                            <a href="{{ path('admin_articles', {page: currentPage - 1, search: search}) }}" class="px-4 py-2 bg-white border rounded hover:bg-gray-50">← Précédent</a>
                        {% endif %}
                        {% for i in 1..totalPages %}
                            {% if i == currentPage %}
                                <span class="px-4 py-2 bg-primary text-white rounded font-semibold">{{ i }}</span>
                            {% elseif i == 1 or i == totalPages or (i >= currentPage - 2 and i <= currentPage + 2) %}
                                <a href="{{ path('admin_articles', {page: i, search: search}) }}" class="px-4 py-2 bg-white border rounded hover:bg-gray-50">{{ i }}</a>
                            {% elseif i == currentPage - 3 or i == currentPage + 3 %}
                                <span class="px-4 py-2">...</span>
                            {% endif %}
                        {% endfor %}
                        {% if currentPage < totalPages %}
                            <a href="{{ path('admin_articles', {page: currentPage + 1, search: search}) }}" class="px-4 py-2 bg-white border rounded hover:bg-gray-50">Suivant →</a>
                        {% endif %}
                    </nav>
                </div>
            {% endif %}
        {% else %}
            <div class="text-center py-16">
                <p class="text-gray-500 mb-4">Aucun article trouvé</p>
                <a href="{{ path('admin_articles_new') }}" class="btn-primary">Créer le premier article</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
