{% extends 'admin/base_admin.html.twig' %}

{% block title %}Articles{% endblock %}
{% block page_title %}Articles{% endblock %}
{% block page_subtitle %}
    <p class="text-sm text-gray-600">Gérez vos articles - {{ total }} article{{ total > 1 ? 's' : '' }} au total</p>
{% endblock %}

{% block body %}
    <div class="flex justify-between items-center mb-6">
        {# Recherche + filtres #}
        <form method="get" class="flex gap-3 flex-wrap">
            <input type="text" name="search" value="{{ search }}" placeholder="Rechercher un article..." class="form-input w-64">
            <select name="collection" class="form-input w-48">
                <option value="">Toutes les collections</option>
                {% for col in collections %}
                    <option value="{{ col.id }}" {{ collectionId == col.id ? 'selected' : '' }}>{{ col.nom }}</option>
                {% endfor %}
            </select>
            <select name="fournisseur" class="form-input w-48">
                <option value="">Tous les fournisseurs</option>
                {% for f in fournisseurs %}
                    <option value="{{ f.id }}" {{ fournisseurId == f.id ? 'selected' : '' }}>{{ f.nom }}</option>
                {% endfor %}
            </select>
            <button type="submit" class="btn-primary">Filtrer</button>
            {% if search or collectionId or fournisseurId %}
                <a href="{{ path('admin_articles') }}" class="btn-outline">Réinitialiser</a>
            {% endif %}
        </form>

        {# Nouveau #}
        <a href="{{ path('admin_articles_new') }}" class="btn-primary">
            + Nouvel Article
        </a>
    </div>

    {# Données fournisseurs pour Alpine #}
    <script>
        const fournisseursData = [{% for f in fournisseurs %}{"id":{{ f.id }},"nom":{{ f.nom|json_encode|raw }}}{% if not loop.last %},{% endif %}{% endfor %}];
    </script>

    <div class="card overflow-hidden">
        {% if articles|length > 0 %}
            <table class="w-full">
                <thead class="bg-gray-50 border-b">
                    <tr>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Nom</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Prix vente</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Prix fourn.</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Variantes</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Fournisseur</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Statut</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Vedette</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y">
                    {% for article in articles %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    {% if article.images|length > 0 %}
                                        <img src="{{ article.images[0].url }}" alt="{{ article.nom }}" class="w-12 h-12 object-cover rounded-lg">
                                    {% else %}
                                        <div class="w-12 h-12 bg-gray-200 rounded-lg"></div>
                                    {% endif %}
                                    <div>
                                        <div class="font-semibold">{{ article.nom }}</div>
                                        <div class="text-sm text-gray-500">{{ article.slug }}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 font-semibold">{{ article.prixBase|number_format(2, ',', ' ') }} €</td>
                            <td class="px-6 py-4 text-sm">
                                {% if article.prixFournisseur %}
                                    <span class="text-gray-700">{{ article.prixFournisseur|number_format(2, ',', ' ') }} €</span>
                                {% else %}
                                    <span class="text-gray-400">—</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-600">
                                {{ article.variantes|length }} variante{{ article.variantes|length > 1 ? 's' : '' }}
                            </td>

                            {# Fournisseur — édition inline #}
                            <td class="px-6 py-4"
                                x-data="{
                                    editing: false,
                                    fid: {{ article.fournisseur ? article.fournisseur.id : 'null' }},
                                    fname: '{{ article.fournisseur ? article.fournisseur.nom|e('js') : '' }}',
                                    async set(val) {
                                        const fid = val ? parseInt(val) : null;
                                        const f = fournisseursData.find(f => f.id === fid);
                                        const r = await fetch('{{ path('admin_articles_set_fournisseur', {id: article.id}) }}', {
                                            method: 'POST',
                                            headers: {'Content-Type':'application/json'},
                                            body: JSON.stringify({fournisseurId: fid})
                                        });
                                        const d = await r.json();
                                        if (d.success) { this.fid = fid; this.fname = f ? f.nom : ''; this.editing = false; }
                                    }
                                }">
                                <span x-show="!editing"
                                      @click="editing = true; $nextTick(() => $refs.fsel.focus())"
                                      class="inline-flex items-center gap-1.5 cursor-pointer text-sm px-2 py-1 rounded hover:bg-gray-100">
                                    <span x-text="fname || 'Aucun'" :class="fname ? 'text-gray-800' : 'text-gray-400 italic'"></span>
                                    <svg class="w-3 h-3 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                                    </svg>
                                </span>
                                <select x-show="editing" x-ref="fsel"
                                        @change="set($event.target.value)"
                                        @blur="editing = false"
                                        class="form-select text-sm py-1">
                                    <option value="">Aucun</option>
                                    {% for f in fournisseurs %}
                                        <option value="{{ f.id }}" {{ article.fournisseur and article.fournisseur.id == f.id ? 'selected' : '' }}>{{ f.nom }}</option>
                                    {% endfor %}
                                </select>
                            </td>

                            <td class="px-6 py-4"
                                x-data="{ val: {{ article.actif ? 'true' : 'false' }} }"
                                @click="fetch('{{ path('admin_articles_toggle', {id: article.id, field: 'actif'}) }}', {method:'POST'}).then(r=>r.json()).then(d=>{ if(d.success) val=d.value; })"
                                style="cursor:pointer" title="Cliquer pour basculer">
                                <span x-show="val" class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-xs font-semibold">Actif</span>
                                <span x-show="!val" class="px-3 py-1 bg-gray-100 text-gray-800 rounded-full text-xs font-semibold">Inactif</span>
                            </td>
                            <td class="px-6 py-4"
                                x-data="{ val: {{ article.enVedette ? 'true' : 'false' }} }"
                                @click="fetch('{{ path('admin_articles_toggle', {id: article.id, field: 'enVedette'}) }}', {method:'POST'}).then(r=>r.json()).then(d=>{ if(d.success) val=d.value; })"
                                style="cursor:pointer" title="Cliquer pour basculer">
                                <span x-show="val" class="px-3 py-1 bg-yellow-100 text-yellow-800 rounded-full text-xs font-semibold">Oui</span>
                                <span x-show="!val" class="px-3 py-1 bg-gray-100 text-gray-600 rounded-full text-xs font-semibold">Non</span>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex gap-2">
                                    <a href="{{ path('admin_articles_edit', {id: article.id}) }}" class="text-primary hover:text-secondary">Modifier</a>
                                    <form method="post" action="{{ path('admin_articles_clone', {id: article.id}) }}">
                                        <button type="submit" class="text-blue-600 hover:text-blue-700">Cloner</button>
                                    </form>
                                    <form method="post" action="{{ path('admin_articles_delete', {id: article.id}) }}" onsubmit="return confirm('Supprimer cet article ?');">
                                        <button type="submit" class="text-red-600 hover:text-red-700">Supprimer</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            {# Pagination #}
            {% if totalPages > 1 %}
                <div class="px-6 py-4 border-t bg-gray-50 flex justify-center">
                    <nav class="flex gap-2">
                        {% if currentPage > 1 %}
                            <a href="{{ path('admin_articles', {page: currentPage - 1, search: search, collection: collectionId, fournisseur: fournisseurId}) }}" class="px-4 py-2 bg-white border rounded hover:bg-gray-50">← Précédent</a>
                        {% endif %}
                        {% for i in 1..totalPages %}
                            {% if i == currentPage %}
                                <span class="px-4 py-2 bg-primary text-white rounded font-semibold">{{ i }}</span>
                            {% elseif i == 1 or i == totalPages or (i >= currentPage - 2 and i <= currentPage + 2) %}
                                <a href="{{ path('admin_articles', {page: i, search: search, collection: collectionId, fournisseur: fournisseurId}) }}" class="px-4 py-2 bg-white border rounded hover:bg-gray-50">{{ i }}</a>
                            {% elseif i == currentPage - 3 or i == currentPage + 3 %}
                                <span class="px-4 py-2">...</span>
                            {% endif %}
                        {% endfor %}
                        {% if currentPage < totalPages %}
                            <a href="{{ path('admin_articles', {page: currentPage + 1, search: search, collection: collectionId, fournisseur: fournisseurId}) }}" class="px-4 py-2 bg-white border rounded hover:bg-gray-50">Suivant →</a>
                        {% endif %}
                    </nav>
                </div>
            {% endif %}
        {% else %}
            <div class="text-center py-16">
                <p class="text-gray-500 mb-4">Aucun article trouvé</p>
                <a href="{{ path('admin_articles_new') }}" class="btn-primary">Créer le premier article</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
