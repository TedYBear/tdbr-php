{% extends 'admin/base_admin.html.twig' %}

{% block title %}{{ article ? 'Modifier' : 'Nouvel' }} Article{% endblock %}

{% block page_title %}{{ article ? 'Modifier' : 'Nouvel' }} Article{% endblock %}

{% block body %}
<div x-data="{
    variantes: {{ article and article.variantes ? article.variantes|json_encode : '[]' }},
    addVariante() {
        this.variantes.push({ id: Date.now().toString(), nom: '', prix: '', stock: '' });
    },
    removeVariante(index) {
        this.variantes.splice(index, 1);
    }
}">
    <form method="post" class="space-y-8">
        <div class="grid lg:grid-cols-3 gap-8">
            {# Formulaire principal #}
            <div class="lg:col-span-2 space-y-6">
                {# Informations de base #}
                <div class="card p-6">
                    <h2 class="text-xl font-bold mb-4">Informations de base</h2>

                    <div class="space-y-4">
                        <div class="form-group">
                            <label>Nom *</label>
                            <input type="text" name="nom" value="{{ article ? article.nom : '' }}" required class="form-input">
                        </div>

                        <div class="form-group">
                            <label>Description</label>
                            <textarea name="description" rows="4" class="form-textarea">{{ article ? article.description : '' }}</textarea>
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div class="form-group">
                                <label>Prix (€) *</label>
                                <input type="number" step="0.01" name="prix" value="{{ article ? article.prix : '' }}" required class="form-input">
                            </div>

                            <div class="form-group">
                                <label>Stock</label>
                                <input type="number" name="stock" value="{{ article ? article.stock : 999 }}" class="form-input">
                            </div>
                        </div>
                    </div>
                </div>

                {# Images #}
                <div class="card p-6">
                    <h2 class="text-xl font-bold mb-4">Images</h2>
                    <p class="text-sm text-gray-600 mb-4">Entrez les URLs des images (une par ligne)</p>
                    <textarea name="images[]" rows="4" class="form-textarea" placeholder="https://exemple.com/image1.jpg&#10;https://exemple.com/image2.jpg">{% if article and article.images %}{{ article.images|join('\n') }}{% endif %}</textarea>
                </div>

                {# Variantes #}
                <div class="card p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-xl font-bold">Variantes</h2>
                        <button type="button" @click="addVariante()" class="btn-primary text-sm">+ Ajouter une variante</button>
                    </div>

                    <div class="space-y-3">
                        <template x-for="(variante, index) in variantes" :key="index">
                            <div class="flex gap-3 p-3 bg-gray-50 rounded-lg">
                                <input type="hidden" :name="'variantes[' + index + '][id]'" x-model="variante.id">
                                <input type="text" :name="'variantes[' + index + '][nom]'" x-model="variante.nom" placeholder="Nom de la variante" class="form-input flex-1">
                                <input type="number" step="0.01" :name="'variantes[' + index + '][prix]'" x-model="variante.prix" placeholder="Prix" class="form-input w-32">
                                <input type="number" :name="'variantes[' + index + '][stock]'" x-model="variante.stock" placeholder="Stock" class="form-input w-24">
                                <button type="button" @click="removeVariante(index)" class="px-3 py-2 text-red-600 hover:bg-red-50 rounded">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                </button>
                            </div>
                        </template>

                        <p x-show="variantes.length === 0" class="text-sm text-gray-500 text-center py-4">
                            Aucune variante. Cliquez sur "Ajouter une variante" pour en créer.
                        </p>
                    </div>
                </div>
            </div>

            {# Sidebar #}
            <div class="lg:col-span-1 space-y-6">
                {# Catégorie et Collection #}
                <div class="card p-6">
                    <h2 class="text-xl font-bold mb-4">Organisation</h2>

                    <div class="space-y-4">
                        <div class="form-group">
                            <label>Catégorie</label>
                            <select name="categorieId" class="form-select">
                                <option value="">Aucune</option>
                                {% for category in categories %}
                                    <option value="{{ category._id }}" {{ article and article.categorieId and article.categorieId == category._id ? 'selected' : '' }}>
                                        {{ category.nom }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Collection</label>
                            <select name="collectionId" class="form-select">
                                <option value="">Aucune</option>
                                {% for collection in collections %}
                                    <option value="{{ collection._id }}" {{ article and article.collectionId and article.collectionId == collection._id ? 'selected' : '' }}>
                                        {{ collection.nom }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>

                {# Publication #}
                <div class="card p-6">
                    <h2 class="text-xl font-bold mb-4">Publication</h2>

                    <div class="flex items-center gap-3">
                        <input type="checkbox" name="actif" id="actif" {{ article and article.actif ? 'checked' : (not article ? 'checked' : '') }} class="w-5 h-5 text-primary rounded">
                        <label for="actif" class="cursor-pointer">Article actif (visible sur le site)</label>
                    </div>
                </div>

                {# Actions #}
                <div class="space-y-3">
                    <button type="submit" class="btn-primary w-full">
                        {{ article ? 'Mettre à jour' : 'Créer' }} l'article
                    </button>
                    <a href="{{ path('admin_articles') }}" class="btn-outline w-full text-center">
                        Annuler
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}
