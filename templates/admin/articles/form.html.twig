{% extends 'admin/base_admin.html.twig' %}

{% block title %}{{ article ? 'Modifier' : 'Nouvel' }} Article{% endblock %}

{% block page_title %}{{ article ? 'Modifier' : 'Nouvel' }} Article{% endblock %}

{% block body %}
{% set variantesJson = [] %}
{% set imagesJson = [] %}
{% if article %}
    {% for v in article.variantes %}
        {% set variantesJson = variantesJson|merge([{id: v.id, nom: v.nom, sku: v.sku, prix: v.prix, valeurs: v.valeurs, actif: v.actif}]) %}
    {% endfor %}
    {% for img in article.images %}
        {% set imagesJson = imagesJson|merge([img.url]) %}
    {% endfor %}
{% endif %}
<div x-data="{
    variantes: {{ variantesJson|json_encode }},
    images: {{ imagesJson|json_encode }},
    uploadingImages: false,
    uploadError: '',

    async uploadFiles(files) {
        this.uploadError = '';
        this.uploadingImages = true;
        for (const file of Array.from(files)) {
            if (!file.type.startsWith('image/')) continue;
            if (file.size > 5242880) { this.uploadError = file.name + ' : trop volumineux (max 5 Mo)'; continue; }
            const fd = new FormData();
            fd.append('file', file);
            try {
                const r = await fetch('/admin/upload/image', { method: 'POST', body: fd });
                const d = await r.json();
                if (d.success) { this.images.push(d.path); }
                else { this.uploadError = d.error || 'Erreur upload'; }
            } catch(e) { this.uploadError = 'Erreur réseau'; }
        }
        this.uploadingImages = false;
    },
    removeImage(index) { this.images.splice(index, 1); },
    onDropImages(e) { e.preventDefault(); this.uploadFiles(e.dataTransfer.files); },

    addVariante() {
        this.variantes.push({ id: Date.now(), nom: '', sku: '', prix: '', valeurs: null, actif: true });
    },
    removeVariante(index) {
        this.variantes.splice(index, 1);
    },

    valeursLabel(variante) {
        if (!variante.valeurs) return '';
        return Object.entries(variante.valeurs).map(([k, v]) => k + ': ' + v).join(' · ');
    },

    /* === Template selector === */
    templates: {{ templates|json_encode }},
    templateSelectorOpen: false,
    selectedTemplateId: '',
    selectedValues: {},

    get selectedTemplate() {
        return this.templates.find(t => t.id == this.selectedTemplateId) || null;
    },

    get variantCount() {
        if (!this.selectedTemplate) return 0;
        const counts = this.selectedTemplate.caracteristiques.map(c => (this.selectedValues[c.nom] || []).length);
        if (counts.length === 0 || counts.some(c => c === 0)) return 0;
        return counts.reduce((acc, c) => acc * c, 1);
    },

    onTemplateChange() {
        if (this.selectedTemplate) {
            const vals = {};
            this.selectedTemplate.caracteristiques.forEach(c => { vals[c.nom] = [...c.valeurs]; });
            this.selectedValues = vals;
        } else {
            this.selectedValues = {};
        }
    },

    isSelected(caracNom, valeur) {
        return (this.selectedValues[caracNom] || []).includes(valeur);
    },

    toggleValue(caracNom, valeur) {
        const current = [...(this.selectedValues[caracNom] || [])];
        const idx = current.indexOf(valeur);
        if (idx > -1) { current.splice(idx, 1); } else { current.push(valeur); }
        this.selectedValues = { ...this.selectedValues, [caracNom]: current };
    },

    selectAll(caracNom) {
        const c = this.selectedTemplate.caracteristiques.find(c => c.nom === caracNom);
        if (c) this.selectedValues = { ...this.selectedValues, [caracNom]: [...c.valeurs] };
    },

    selectNone(caracNom) {
        this.selectedValues = { ...this.selectedValues, [caracNom]: [] };
    },

    cartesianProduct(arrays) {
        if (arrays.length === 0) return [[]];
        const [first, ...rest] = arrays;
        const restProd = this.cartesianProduct(rest);
        return first.flatMap(v => restProd.map(combo => [v, ...combo]));
    },

    generateSKU(slug, values, index) {
        const normalize = v => v.toUpperCase()
            .normalize('NFD').replace(/[\u0300-\u036f]/g, '')
            .replace(/[^A-Z0-9]+/g, '-').replace(/^-+|-+$/g, '');
        return [slug.toUpperCase().replace(/[^A-Z0-9]+/g, '-'), ...values.map(normalize),
                String(index).padStart(3, '0')].join('-');
    },

    generateVariants() {
        if (!this.selectedTemplate || this.variantCount === 0 || this.variantCount > 100) return;
        const caracs = this.selectedTemplate.caracteristiques;
        const arrays = caracs.map(c => this.selectedValues[c.nom] || []);
        const combos = this.cartesianProduct(arrays);
        const slug = document.querySelector('[name=nom]')?.value || 'ARTICLE';
        const baseIndex = this.variantes.length;
        combos.forEach((combo, idx) => {
            const valeurs = {};
            caracs.forEach((c, i) => { valeurs[c.nom] = combo[i]; });
            this.variantes.push({
                id: Date.now() + idx,
                nom: combo.join(' '),
                sku: this.generateSKU(slug, combo, baseIndex + idx + 1),
                prix: '',
                valeurs: valeurs,
                actif: true
            });
        });
        this.templateSelectorOpen = false;
        this.selectedTemplateId = '';
        this.selectedValues = {};
    }
}">
    <form method="post" class="space-y-8">
        <div class="grid lg:grid-cols-3 gap-8">
            {# Formulaire principal #}
            <div class="lg:col-span-2 space-y-6">
                {# Informations de base #}
                <div class="card p-6">
                    <h2 class="text-xl font-bold mb-4">Informations de base</h2>

                    <div class="space-y-4">
                        <div class="form-group">
                            <label>Nom *</label>
                            <input type="text" name="nom" value="{{ article ? article.nom : '' }}" required class="form-input">
                        </div>

                        <div class="form-group">
                            <label>Description</label>
                            <textarea name="description" rows="4" class="form-textarea">{{ article ? article.description : '' }}</textarea>
                        </div>

                        <div class="form-group">
                            <label>Prix de vente (€) *</label>
                            <input type="number" step="0.01" name="prix" value="{{ article ? article.prixBase : '' }}" required class="form-input">
                        </div>
                    </div>
                </div>

                {# Images #}
                <div class="card p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-xl font-bold">Images</h2>
                        <span class="text-sm text-gray-500" x-text="images.length + ' image(s)'"></span>
                    </div>

                    <template x-for="(img, i) in images" :key="i">
                        <input type="hidden" name="images[]" :value="img">
                    </template>

                    <div @dragover.prevent
                         @drop="onDropImages($event)"
                         @click="$refs.imagesInput.click()"
                         class="border-2 border-dashed border-gray-300 rounded-xl p-6 text-center cursor-pointer hover:border-primary hover:bg-primary/5 transition-colors mb-4">
                        <svg class="w-8 h-8 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                        </svg>
                        <p class="text-sm text-gray-500" x-show="!uploadingImages">Glissez vos images ici ou cliquez pour sélectionner (plusieurs fichiers acceptés)</p>
                        <p class="text-sm text-primary font-medium" x-show="uploadingImages">Envoi en cours...</p>
                        <input type="file" x-ref="imagesInput" accept="image/*" multiple class="hidden"
                               @change="uploadFiles($event.target.files); $event.target.value=''">
                    </div>

                    <p x-show="uploadError" x-text="uploadError" class="text-sm text-red-600 mb-3"></p>

                    <div x-show="images.length > 0" class="grid grid-cols-3 gap-3">
                        <template x-for="(img, index) in images" :key="index">
                            <div class="relative aspect-square rounded-lg border border-gray-200" style="overflow:hidden">
                                <img :src="img" :alt="'Image ' + (index+1)" class="w-full h-full object-cover">
                                <button type="button" @click.prevent="removeImage(index)"
                                        style="position:absolute;top:4px;right:4px;z-index:10;width:28px;height:28px;background:#ef4444;color:white;border-radius:50%;border:none;cursor:pointer;font-size:16px;line-height:1;display:flex;align-items:center;justify-content:center;">
                                    &times;
                                </button>
                                <span x-show="index === 0" style="position:absolute;top:4px;left:4px;z-index:10" class="bg-primary text-white text-xs px-1.5 py-0.5 rounded">Principale</span>
                            </div>
                        </template>
                    </div>
                </div>

                {# Variantes #}
                <div class="card p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-xl font-bold">Variantes</h2>
                        <div class="flex gap-2">
                            <button type="button" @click="templateSelectorOpen = !templateSelectorOpen"
                                    x-show="templates.length > 0"
                                    class="btn-outline text-sm flex items-center gap-1">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                                </svg>
                                Générer depuis un template
                            </button>
                            <button type="button" @click="addVariante()" class="btn-primary text-sm">+ Ajouter manuellement</button>
                            <button type="button"
                                    x-show="variantes.length > 0"
                                    @click="if(confirm('Supprimer toutes les variantes ?')) variantes = []"
                                    class="text-sm px-3 py-2 text-red-600 border border-red-200 rounded-lg hover:bg-red-50">
                                Tout supprimer
                            </button>
                        </div>
                    </div>

                    {# Sélecteur de template #}
                    <div x-show="templateSelectorOpen" x-transition class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-xl space-y-4">
                        <h3 class="font-semibold text-blue-900">Générer des variantes depuis un template</h3>

                        <div class="form-group">
                            <label class="text-sm font-medium text-blue-800">Template</label>
                            <select x-model="selectedTemplateId" @change="onTemplateChange()" class="form-select mt-1">
                                <option value="">-- Sélectionner un template --</option>
                                <template x-for="t in templates" :key="t.id">
                                    <option :value="t.id" x-text="t.nom + ' (' + t.caracteristiques.reduce((acc, c) => acc * c.valeurs.length, 1) + ' variantes max)'"></option>
                                </template>
                            </select>
                        </div>

                        <template x-if="selectedTemplate">
                            <div class="space-y-4">
                                <p class="text-sm text-blue-700" x-text="selectedTemplate.description || ''"></p>

                                <template x-for="carac in selectedTemplate.caracteristiques" :key="carac.nom">
                                    <div class="bg-white rounded-lg p-4 border border-blue-100">
                                        <div class="flex items-center justify-between mb-3">
                                            <h4 class="font-medium text-gray-900" x-text="carac.nom"></h4>
                                            <div class="flex gap-2 items-center">
                                                <button type="button" @click="selectAll(carac.nom)"
                                                        class="text-xs px-2 py-1 rounded bg-gray-100 hover:bg-gray-200">Tout</button>
                                                <button type="button" @click="selectNone(carac.nom)"
                                                        class="text-xs px-2 py-1 rounded bg-gray-100 hover:bg-gray-200">Aucun</button>
                                                <span class="text-xs text-gray-500"
                                                      x-text="(selectedValues[carac.nom] || []).length + ' sélect.'"></span>
                                            </div>
                                        </div>
                                        <div class="grid grid-cols-3 gap-2">
                                            <template x-for="valeur in carac.valeurs" :key="valeur">
                                                <label class="flex items-center gap-2 cursor-pointer p-2 rounded hover:bg-gray-50">
                                                    <input type="checkbox"
                                                           :checked="isSelected(carac.nom, valeur)"
                                                           @change="toggleValue(carac.nom, valeur)"
                                                           class="w-4 h-4 text-primary rounded">
                                                    <span class="text-sm" x-text="valeur"></span>
                                                </label>
                                            </template>
                                        </div>
                                    </div>
                                </template>

                                <div class="flex items-center justify-between pt-2">
                                    <div>
                                        <p class="text-sm text-blue-700">Variantes à générer :</p>
                                        <p class="text-2xl font-bold text-blue-600" x-text="variantCount"></p>
                                        <p x-show="variantCount > 100" class="text-sm text-red-600">Trop de variantes (max 100)</p>
                                    </div>
                                    <button type="button"
                                            @click="generateVariants()"
                                            :disabled="variantCount === 0 || variantCount > 100"
                                            class="btn-primary disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-2">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                                        </svg>
                                        <span x-text="'Générer ' + variantCount + ' variantes'"></span>
                                    </button>
                                </div>
                            </div>
                        </template>
                    </div>

                    {# Liste des variantes #}
                    <div class="space-y-3">
                        <template x-for="(variante, index) in variantes" :key="variante.id">
                            <div class="p-4 bg-gray-50 rounded-lg space-y-2">
                                {# Étiquette des valeurs structurées #}
                                <div x-show="variante.valeurs && Object.keys(variante.valeurs).length > 0"
                                     class="flex flex-wrap gap-1">
                                    <template x-for="[k, v] in Object.entries(variante.valeurs || {})" :key="k">
                                        <span style="display:inline-flex;align-items:center;padding:2px 8px;background:#ede9fe;color:#5b21b6;border-radius:9999px;font-size:0.75rem;font-weight:600;"
                                              x-text="k + ': ' + v"></span>
                                    </template>
                                </div>

                                <div class="flex gap-3 flex-wrap">
                                    <input type="hidden" :name="'variantes[' + index + '][id]'" x-model="variante.id">
                                    <input type="hidden" :name="'variantes[' + index + '][valeurs]'"
                                           :value="variante.valeurs ? JSON.stringify(variante.valeurs) : ''">
                                    <input type="text"
                                           :name="'variantes[' + index + '][nom]'"
                                           x-model="variante.nom"
                                           placeholder="Nom (ex: S Rouge)"
                                           class="form-input flex-1 min-w-32">
                                    <input type="text"
                                           :name="'variantes[' + index + '][sku]'"
                                           x-model="variante.sku"
                                           placeholder="SKU"
                                           class="form-input w-44">
                                    <input type="number"
                                           step="0.01"
                                           :name="'variantes[' + index + '][prix]'"
                                           x-model="variante.prix"
                                           placeholder="Prix €"
                                           class="form-input w-28">
                                    <label class="flex items-center gap-1 cursor-pointer text-sm text-gray-600 whitespace-nowrap">
                                        <input type="checkbox"
                                               :name="'variantes[' + index + '][actif]'"
                                               x-model="variante.actif"
                                               class="w-4 h-4 text-primary rounded">
                                        Actif
                                    </label>
                                    <button type="button" @click="removeVariante(index)"
                                            class="px-3 py-2 text-red-600 hover:bg-red-50 rounded flex-shrink-0">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </template>

                        <p x-show="variantes.length === 0" class="text-sm text-gray-500 text-center py-4">
                            Aucune variante. Utilisez un template ou ajoutez manuellement.
                        </p>
                    </div>
                </div>
            </div>

            {# Sidebar #}
            <div class="lg:col-span-1 space-y-6">
                {# Collection #}
                <div class="card p-6">
                    <h2 class="text-xl font-bold mb-4">Organisation</h2>

                    <div class="form-group">
                        <label>Collection</label>
                        <select name="collection" class="form-select">
                            <option value="">Aucune</option>
                            {% for col in collections %}
                                <option value="{{ col.id }}" {{ article and article.collection and article.collection.id == col.id ? 'selected' : '' }}>
                                    {{ col.nom }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="form-group mt-4">
                        <label>Fournisseur</label>
                        <select name="fournisseur" class="form-select">
                            <option value="">Aucun</option>
                            {% for f in fournisseurs %}
                                <option value="{{ f.id }}" {{ article and article.fournisseur and article.fournisseur.id == f.id ? 'selected' : '' }}>
                                    {{ f.nom }}
                                </option>
                            {% endfor %}
                        </select>
                        {% if fournisseurs|length == 0 %}
                            <p class="text-xs text-gray-500 mt-1">
                                <a href="{{ path('admin_fournisseurs_new') }}" class="text-primary hover:underline">
                                    Créer un fournisseur
                                </a>
                            </p>
                        {% endif %}
                    </div>

                    {# Grille de prix #}
                    {% set grillesData = [] %}
                    {% for g in grilles %}
                        {% set grillesData = grillesData|merge([{id: g.id, nom: g.nom, lignes: g.lignes}]) %}
                    {% endfor %}
                    <script>
                        const grillesAdminData = {{ grillesData|json_encode|raw }};
                    </script>
                    <div class="form-group mt-4"
                         x-data="{
                             grilles: grillesAdminData,
                             selectedGrilleId: '{{ article and article.grillePrix ? article.grillePrix.id : '' }}',
                             get selectedGrille() {
                                 return this.grilles.find(g => g.id == this.selectedGrilleId) || null;
                             }
                         }">
                        <label>Grille de prix</label>
                        <select name="grillePrix" class="form-select" x-model="selectedGrilleId">
                            <option value="">Aucune</option>
                            {% for g in grilles %}
                                <option value="{{ g.id }}">{{ g.nom }}</option>
                            {% endfor %}
                        </select>
                        {% if grilles|length == 0 %}
                            <p class="text-xs text-gray-500 mt-1">
                                <a href="{{ path('admin_grilles_prix_new') }}" class="text-primary hover:underline">
                                    Créer une grille de prix
                                </a>
                            </p>
                        {% endif %}

                        <template x-if="selectedGrille">
                            <div class="mt-3 bg-gray-50 rounded-lg overflow-hidden border border-gray-200">
                                <table class="w-full text-xs">
                                    <thead class="bg-gray-100">
                                        <tr>
                                            <th class="px-2 py-1.5 text-left text-gray-600">Qté</th>
                                            <th class="px-2 py-1.5 text-right text-gray-600">Fourn.</th>
                                            <th class="px-2 py-1.5 text-right text-gray-600">Vente</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <template x-for="ligne in selectedGrille.lignes" :key="ligne.quantite">
                                            <tr class="border-t border-gray-200">
                                                <td class="px-2 py-1 font-medium" x-text="ligne.quantite + ' ex.'"></td>
                                                <td class="px-2 py-1 text-right text-gray-600"
                                                    x-text="ligne.prixFournisseur !== null ? parseFloat(ligne.prixFournisseur).toFixed(2) + ' €' : '—'"></td>
                                                <td class="px-2 py-1 text-right font-semibold"
                                                    x-text="ligne.prixVente !== null ? parseFloat(ligne.prixVente).toFixed(2) + ' €' : '—'"></td>
                                            </tr>
                                        </template>
                                    </tbody>
                                </table>
                            </div>
                        </template>
                    </div>
                </div>

                {# Publication #}
                <div class="card p-6">
                    <h2 class="text-xl font-bold mb-4">Publication</h2>

                    <div class="space-y-3">
                        <div class="flex items-center gap-3">
                            <input type="checkbox" name="actif" id="actif"
                                   {{ article and article.actif ? 'checked' : (not article ? 'checked' : '') }}
                                   class="w-5 h-5 text-primary rounded">
                            <label for="actif" class="cursor-pointer">Article actif (visible sur le site)</label>
                        </div>
                        <div class="flex items-center gap-3">
                            <input type="checkbox" name="enVedette" id="enVedette"
                                   {{ article and article.enVedette ? 'checked' : '' }}
                                   class="w-5 h-5 text-primary rounded">
                            <label for="enVedette" class="cursor-pointer">En vedette (affiché sur la page d'accueil)</label>
                        </div>
                    </div>
                </div>

                {# Résumé variantes #}
                <div class="card p-6">
                    <h2 class="text-xl font-bold mb-2">Variantes</h2>
                    <p class="text-3xl font-bold text-primary" x-text="variantes.length"></p>
                    <p class="text-sm text-gray-500">variante(s) configurée(s)</p>
                </div>

                {# Actions #}
                <div class="space-y-3">
                    <button type="submit" class="btn-primary w-full">
                        {{ article ? 'Mettre à jour' : 'Créer' }} l'article
                    </button>
                    <a href="{{ path('admin_articles') }}" class="btn-outline w-full text-center">
                        Annuler
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}
