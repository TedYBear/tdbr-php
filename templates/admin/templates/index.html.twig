{% extends 'admin/base_admin.html.twig' %}

{% block title %}Templates{% endblock %}

{% block page_title %}Templates de variantes{% endblock %}

{% block body %}
    <div class="flex justify-between items-center mb-6">
        <p class="text-gray-600 text-sm">Les templates regroupent des caractéristiques pour générer automatiquement des variantes.</p>
        <a href="{{ path('admin_templates_new') }}" class="btn-primary">+ Nouveau Template</a>
    </div>

    <div class="card overflow-hidden">
        {% if templates|length > 0 %}
            <table class="w-full">
                <thead class="bg-gray-50 border-b">
                    <tr>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Nom</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Description</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Caractéristiques liées</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y">
                    {% for tmpl in templates %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 font-semibold">{{ tmpl.nom }}</td>
                            <td class="px-6 py-4 text-sm text-gray-600">
                                {{ tmpl.description is defined ? tmpl.description|slice(0, 80) : '' }}
                            </td>
                            <td class="px-6 py-4">
                                {% if tmpl.caracteristiques|length > 0 %}
                                    <div class="flex flex-wrap gap-1">
                                        {% for carac in tmpl.caracteristiques %}
                                            <span class="px-2 py-0.5 bg-primary/10 text-primary rounded text-xs font-medium">
                                                {{ carac.nom }}
                                            </span>
                                        {% endfor %}
                                    </div>
                                {% else %}
                                    <span class="text-gray-400 text-sm">Aucune</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex gap-2">
                                    <a href="{{ path('admin_templates_edit', {id: tmpl.id}) }}" class="text-primary hover:text-secondary">Modifier</a>
                                    <form method="post" action="{{ path('admin_templates_delete', {id: tmpl.id}) }}" onsubmit="return confirm('Supprimer ce template ?');">
                                        <button type="submit" class="text-red-600 hover:text-red-700">Supprimer</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="text-center py-16">
                <p class="text-gray-500 mb-4">Aucun template défini</p>
                <a href="{{ path('admin_templates_new') }}" class="btn-primary">Créer le premier template</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
