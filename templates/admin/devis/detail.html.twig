{% extends 'admin/base_admin.html.twig' %}

{% block title %}Devis #{{ devis.id }}{% endblock %}
{% block page_title %}Devis de {{ devis.nom }}{% endblock %}
{% block page_subtitle %}<p class="text-sm text-gray-500 mt-1">Reçu le {{ devis.createdAt|date('d/m/Y à H:i') }}</p>{% endblock %}

{% block body %}
    <div class="mb-6">
        <a href="{{ path('admin_devis') }}" class="inline-flex items-center gap-2 text-gray-600 hover:text-primary transition text-sm">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Retour aux devis
        </a>
    </div>

    <div class="grid lg:grid-cols-3 gap-8">
        {# Infos principales #}
        <div class="lg:col-span-2 space-y-6">

            {# Contact #}
            <div class="card p-6">
                <h2 class="font-heading text-xl font-bold mb-4">Coordonnées</h2>
                <div class="grid sm:grid-cols-2 gap-4 text-sm">
                    <div><span class="text-gray-500">Nom :</span> <span class="font-semibold">{{ devis.nom }}</span></div>
                    <div><span class="text-gray-500">Email :</span> <a href="mailto:{{ devis.email }}" class="text-primary">{{ devis.email }}</a></div>
                    {% if devis.telephone %}
                        <div><span class="text-gray-500">Téléphone :</span> <span>{{ devis.telephone }}</span></div>
                    {% endif %}
                    <div><span class="text-gray-500">Contact préféré :</span> <span class="capitalize">{{ devis.moyenContact }}</span></div>
                </div>
            </div>

            {# Projet #}
            <div class="card p-6">
                <h2 class="font-heading text-xl font-bold mb-4">Description du projet</h2>
                <p class="text-gray-700 whitespace-pre-line">{{ devis.concept }}</p>
                {% if devis.contexte %}
                    <div class="mt-4 pt-4 border-t">
                        <div class="text-sm font-semibold text-gray-600 mb-1">Contexte :</div>
                        <p class="text-gray-700">{{ devis.contexte }}</p>
                    </div>
                {% endif %}
            </div>

            {# Supports & Quantité #}
            <div class="card p-6">
                <h2 class="font-heading text-xl font-bold mb-4">Supports & Quantité</h2>
                {% if devis.supports|length > 0 %}
                    <div class="mb-3">
                        <div class="text-sm font-semibold text-gray-600 mb-2">Supports souhaités :</div>
                        <div class="flex flex-wrap gap-2">
                            {% for s in devis.supports %}
                                <span class="px-3 py-1 bg-accent text-primary rounded-full text-sm font-medium">{{ s }}</span>
                            {% endfor %}
                            {% if devis.autreSupport %}
                                <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">{{ devis.autreSupport }}</span>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
                <div class="text-sm">
                    <span class="text-gray-500">Quantité :</span>
                    <span class="font-semibold ml-2">{{ devis.quantite }}</span>
                </div>
            </div>

            {% if devis.messageAdditionnel %}
                <div class="card p-6">
                    <h2 class="font-heading text-xl font-bold mb-4">Message complémentaire</h2>
                    <p class="text-gray-700 whitespace-pre-line">{{ devis.messageAdditionnel }}</p>
                </div>
            {% endif %}
        </div>

        {# Sidebar : gestion #}
        <div class="space-y-6">
            {# Statut actuel #}
            <div class="card p-6">
                <h2 class="font-heading text-xl font-bold mb-4">Statut actuel</h2>
                <div class="mb-4">
                    {% include 'admin/devis/_badge_statut.html.twig' with {statut: devis.statut} %}
                </div>

                <form method="post" action="{{ path('admin_devis_statut', {id: devis.id}) }}" class="space-y-4">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Changer le statut</label>
                        <select name="statut" class="form-input">
                            <option value="nouveau" {{ devis.statut == 'nouveau' ? 'selected' : '' }}>Nouveau</option>
                            <option value="en_cours" {{ devis.statut == 'en_cours' ? 'selected' : '' }}>En cours</option>
                            <option value="envoye" {{ devis.statut == 'envoye' ? 'selected' : '' }}>Devis envoyé</option>
                            <option value="accepte" {{ devis.statut == 'accepte' ? 'selected' : '' }}>Accepté</option>
                            <option value="refuse" {{ devis.statut == 'refuse' ? 'selected' : '' }}>Refusé</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Notes internes</label>
                        <textarea name="notesAdmin" rows="4" class="form-input" placeholder="Notes visibles uniquement par l'admin...">{{ devis.notesAdmin }}</textarea>
                    </div>
                    <button type="submit" class="btn-primary w-full">Enregistrer</button>
                </form>
            </div>

            {# Répondre #}
            <div class="card p-6">
                <h2 class="font-heading text-xl font-bold mb-4">Répondre</h2>
                <a href="mailto:{{ devis.email }}?subject=Votre demande de devis TDBR"
                   class="btn-outline w-full text-center block">
                    Envoyer un email
                </a>
            </div>

            {# Supprimer #}
            <form method="post" action="{{ path('admin_devis_delete', {id: devis.id}) }}"
                  onsubmit="window.confirmForm(event, this, 'Supprimer définitivement ce devis ?')">
                <button type="submit" class="w-full px-4 py-2 text-red-600 border border-red-200 rounded-lg hover:bg-red-50 transition text-sm">
                    Supprimer ce devis
                </button>
            </form>
        </div>
    </div>
{% endblock %}
