{% extends 'admin/base_admin.html.twig' %}

{% block title %}Devis{% endblock %}
{% block page_title %}Demandes de Devis{% endblock %}
{% block page_subtitle %}<p class="text-sm text-gray-500 mt-1">{{ devis|length }} demande{{ devis|length > 1 ? 's' : '' }}</p>{% endblock %}

{% block body %}
    {% if devis|length > 0 %}
        <div class="card overflow-hidden">
            <table class="w-full">
                <thead class="bg-gray-50 border-b">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Client</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Projet</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Quantit√©</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Statut</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y">
                    {% for d in devis %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4">
                                <div class="font-semibold text-gray-900">{{ d.nom }}</div>
                                <div class="text-sm text-gray-500">{{ d.email }}</div>
                                {% if d.telephone %}<div class="text-sm text-gray-500">{{ d.telephone }}</div>{% endif %}
                            </td>
                            <td class="px-6 py-4 max-w-xs">
                                <p class="text-sm text-gray-700 line-clamp-2">{{ d.concept }}</p>
                                {% if d.supports|length > 0 %}
                                    <div class="flex flex-wrap gap-1 mt-1">
                                        {% for s in d.supports %}
                                            <span class="px-2 py-0.5 bg-accent text-primary rounded text-xs">{{ s }}</span>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-700">{{ d.quantite }}</td>
                            <td class="px-6 py-4 text-sm text-gray-600">{{ d.createdAt|date('d/m/Y H:i') }}</td>
                            <td class="px-6 py-4">
                                {% include 'admin/devis/_badge_statut.html.twig' with {statut: d.statut} %}
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <a href="{{ path('admin_devis_detail', {id: d.id}) }}"
                                       class="text-primary hover:text-secondary font-medium text-sm">Voir</a>
                                    <form method="post" action="{{ path('admin_devis_delete', {id: d.id}) }}"
                                          onsubmit="return confirm('Supprimer ce devis ?')">
                                        <button type="submit" class="text-sm text-red-600 hover:text-red-700">Supprimer</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="card p-16 text-center">
            <p class="text-gray-500">Aucune demande de devis pour le moment.</p>
        </div>
    {% endif %}
{% endblock %}
