{% extends 'admin/base_admin.html.twig' %}

{% block title %}Messages{% endblock %}
{% block page_title %}Messages de Contact{% endblock %}

{% block body %}
    <div class="card overflow-hidden">
        {% if messages|length > 0 %}
            <div class="divide-y">
                {% for message in messages %}
                    {% set isLu = message.lu is defined ? message.lu : (message.statut is defined and message.statut != 'nouveau') %}
                    <div class="p-6 hover:bg-gray-50 {{ isLu ? 'opacity-60' : '' }}">
                        <div class="flex items-start justify-between mb-3">
                            <div>
                                <div class="flex items-center gap-3 mb-1">
                                    <span class="font-semibold text-lg">{{ message.nom }}</span>
                                    {% if not isLu %}
                                        <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-xs font-semibold">Nouveau</span>
                                    {% endif %}
                                </div>
                                <div class="text-sm text-gray-600">
                                    {{ message.email }} • {% if message.createdAt is defined %}{{ message.createdAt|date('d/m/Y à H:i') }}{% endif %}
                                </div>
                            </div>
                            <div class="flex gap-2">
                                {% if not isLu %}
                                    <form method="post" action="{{ path('admin_messages_mark_read', {id: message.id}) }}">
                                        <button type="submit" class="text-sm text-primary hover:text-secondary">Marquer lu</button>
                                    </form>
                                {% endif %}
                                <form method="post" action="{{ path('admin_messages_delete', {id: message.id}) }}" onsubmit="window.confirmForm(event, this, 'Supprimer ce message ?')">
                                    <button type="submit" class="text-sm text-red-600 hover:text-red-700">Supprimer</button>
                                </form>
                            </div>
                        </div>

                        <div class="mb-2">
                            <span class="text-sm font-semibold text-gray-700">Sujet:</span>
                            <span class="text-sm text-gray-900">{{ message.sujet }}</span>
                        </div>

                        <div class="p-4 bg-gray-50 rounded-lg">
                            <p class="text-gray-700 whitespace-pre-line">{{ message.message }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-16">
                <p class="text-gray-500">Aucun message</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
