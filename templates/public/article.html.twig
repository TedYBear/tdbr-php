{% extends 'base.html.twig' %}

{% block title %}{{ article.nom }} - TDBR{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('alpine:init', () => {
            Alpine.data('articlePage', () => ({
                selectedImage: 0,
                quantity: 1,
                lightboxOpen: false,
                addingToCart: false,

                {% set variantesJson = [] %}
                {% for v in article.variantes %}
                    {% if v.actif %}
                        {% set variantesJson = variantesJson|merge([{id: v.id, nom: v.nom, prix: v.prix, valeurs: v.valeurs}]) %}
                    {% endif %}
                {% endfor %}
                variants: {{ variantesJson|json_encode|raw }},

                imagesData: {{ article.images|default([])|json_encode|raw }},
                basePrice: {{ article.prixBase }},
                choices: {},

                get images() {
                    return this.imagesData.map(img => img.url || img);
                },

                /**
                 * Extrait la liste des caractéristiques et leurs valeurs disponibles
                 * depuis les variantes actives qui ont des valeurs structurées.
                 * Ordre préservé d'insertion.
                 */
                get caracteristiques() {
                    const caracs = {};
                    const order = [];
                    this.variants.forEach(v => {
                        if (!v.valeurs) return;
                        Object.entries(v.valeurs).forEach(([nom, val]) => {
                            if (!caracs[nom]) { caracs[nom] = []; order.push(nom); }
                            if (!caracs[nom].includes(val)) caracs[nom].push(val);
                        });
                    });
                    return order.map(nom => ({ nom, valeurs: caracs[nom] }));
                },

                /**
                 * Variante dont les valeurs correspondent exactement aux choix courants.
                 */
                get selectedVariant() {
                    if (this.caracteristiques.length === 0) return null;
                    if (!this.allSelected) return null;
                    return this.variants.find(v => {
                        if (!v.valeurs) return false;
                        return Object.entries(this.choices).every(([k, val]) => v.valeurs[k] === val);
                    }) || null;
                },

                get currentPrice() {
                    if (this.selectedVariant && this.selectedVariant.prix) {
                        return parseFloat(this.selectedVariant.prix);
                    }
                    return this.basePrice;
                },

                get allSelected() {
                    const caracs = this.caracteristiques;
                    if (caracs.length === 0) return true;
                    return caracs.every(c => this.choices[c.nom] && this.choices[c.nom] !== '');
                },

                get variantUnavailable() {
                    return this.caracteristiques.length > 0 && this.allSelected && !this.selectedVariant;
                },

                async addToCart() {
                    this.addingToCart = true;

                    const data = {
                        articleId: {{ article.id }},
                        quantity: this.quantity,
                        choices: this.choices
                    };

                    if (this.selectedVariant) {
                        data.variantId = this.selectedVariant.id;
                    }

                    try {
                        const response = await fetch('{{ path('panier_add') }}', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(data)
                        });

                        const result = await response.json();

                        if (result.success) {
                            const badge = document.querySelector('[data-cart-count]');
                            if (badge) {
                                badge.textContent = result.cartCount;
                                badge.classList.remove('hidden');
                            }
                            const btn = this.$refs.addBtn;
                            if (btn) {
                                btn.classList.add('animate-pulse');
                                setTimeout(() => btn.classList.remove('animate-pulse'), 1000);
                            }
                            alert('Article ajouté au panier !');
                        }
                    } catch (error) {
                        alert('Erreur lors de l\'ajout au panier');
                    } finally {
                        this.addingToCart = false;
                    }
                }
            }));
        });
    </script>
{% endblock %}

{% block body %}
<div x-data="articlePage">
    {# Breadcrumb #}
    <section class="bg-gray-50 py-4">
        <div class="container mx-auto px-4">
            <nav class="flex items-center space-x-2 text-sm">
                <a href="{{ path('home') }}" class="text-gray-600 hover:text-primary">Accueil</a>
                <span class="text-gray-400">/</span>
                <a href="{{ path('catalogue') }}" class="text-gray-600 hover:text-primary">Catalogue</a>
                {% if category %}
                    <span class="text-gray-400">/</span>
                    <a href="{{ path('categorie', {slug: category.slug}) }}" class="text-gray-600 hover:text-primary">{{ category.nom }}</a>
                {% endif %}
                <span class="text-gray-400">/</span>
                <span class="text-primary font-medium">{{ article.nom }}</span>
            </nav>
        </div>
    </section>

    {# Contenu Principal #}
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <div class="grid lg:grid-cols-2 gap-16">
                {# Galerie Images #}
                <div class="space-y-6">
                    {# Image principale #}
                    <div class="relative aspect-square bg-gradient-to-br from-accent/20 to-white rounded-2xl overflow-hidden shadow-xl group">
                        {% if article.images|length > 0 %}
                            <img :src="images && images[selectedImage] ? images[selectedImage] : '{{ article.images[0].url }}'"
                                 alt="{{ article.images[0].alt ?? article.nom }}"
                                 class="w-full h-full object-contain cursor-zoom-in transition-transform duration-500 group-hover:scale-105"
                                 @click="lightboxOpen = true"
                                 onerror="this.src='{{ article.images[0].url }}'">

                            {% set daysSinceCreation = 'now'|date('U') - article.createdAt|date('U') %}
                            {% if daysSinceCreation < (7 * 24 * 3600) %}
                                <div class="absolute top-4 left-4 px-4 py-2 bg-gradient-to-r from-secondary to-primary text-white font-bold rounded-full shadow-lg glow">
                                    Nouveau
                                </div>
                            {% endif %}
                        {% else %}
                            <div class="w-full h-full flex items-center justify-center text-gray-400">
                                <svg class="w-24 h-24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                        {% endif %}
                    </div>

                    {# Miniatures #}
                    {% if article.images|length > 1 %}
                        <div class="grid grid-cols-4 gap-2 md:gap-4">
                            {% for image in article.images|slice(0, 4) %}
                                <div class="aspect-square bg-gray-100 rounded-xl overflow-hidden cursor-pointer transition-all duration-300 hover:ring-4 hover:ring-primary hover:scale-105"
                                     :class="selectedImage === {{ loop.index0 }} ? 'ring-4 ring-primary' : ''"
                                     @click="selectedImage = {{ loop.index0 }}">
                                    <img src="{{ image.url }}" alt="{{ image.alt ?? article.nom }}" class="w-full h-full object-contain">
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                {# Détails Produit #}
                <div class="space-y-8">
                    {# Titre et collection #}
                    <div>
                        {% if collection %}
                            <a href="{{ path('collection', {slug: collection.slug}) }}"
                               class="inline-flex items-center gap-2 text-sm text-secondary font-semibold hover:text-primary mb-3">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                                </svg>
                                Collection {{ collection.nom }}
                            </a>
                        {% endif %}

                        <h1 class="font-heading text-3xl sm:text-4xl md:text-5xl font-black text-gray-900 mb-4">
                            {{ article.nom }}
                        </h1>

                        {% if article.description %}
                            <p class="text-xl text-gray-600 leading-relaxed">
                                {{ article.description }}
                            </p>
                        {% endif %}

                        {# Fournisseur #}
                        {% if article.fournisseur %}
                            <div class="mt-4 flex items-center gap-3">
                                {% if article.fournisseur.logoFilename %}
                                    <img src="/uploads/fournisseurs/{{ article.fournisseur.logoFilename }}"
                                         alt="{{ article.fournisseur.nom }}"
                                         class="h-8 w-auto object-contain opacity-80">
                                {% endif %}
                                {% if article.fournisseur.url %}
                                    <a href="{{ article.fournisseur.url }}" target="_blank" rel="noopener"
                                       class="text-sm text-gray-500 hover:text-primary">{{ article.fournisseur.nom }}</a>
                                {% else %}
                                    <span class="text-sm text-gray-500">{{ article.fournisseur.nom }}</span>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>

                    {# Prix — mis à jour dynamiquement selon la variante sélectionnée #}
                    <div class="flex items-baseline gap-4">
                        <span class="text-4xl md:text-5xl font-black text-primary"
                              x-text="currentPrice.toFixed(2).replace('.', ',') + ' €'">
                            {{ article.prixBase|number_format(2, ',', ' ') }} €
                        </span>
                    </div>

                    {# Sélection des caractéristiques (dérivées des variantes) #}
                    <div x-show="caracteristiques.length > 0" class="space-y-5">
                        <template x-for="carac in caracteristiques" :key="carac.nom">
                            <div>
                                <label style="display:block;font-size:1.125rem;font-weight:700;color:#111827;margin-bottom:0.5rem;"
                                       x-text="carac.nom"></label>

                                {# Dropdown si plusieurs valeurs #}
                                <template x-if="carac.valeurs.length > 1">
                                    <select x-model="choices[carac.nom]"
                                            style="display:block;width:100%;padding:0.75rem 1rem;border:2px solid #e5e7eb;border-radius:0.75rem;font-size:1rem;background:#fff;cursor:pointer;"
                                            @change="$el.style.borderColor = choices[carac.nom] ? '#7c3aed' : '#e5e7eb'">
                                        <option value="" x-text="'-- Choisir ' + carac.nom.toLowerCase() + ' --'"></option>
                                        <template x-for="val in carac.valeurs" :key="val">
                                            <option :value="val" x-text="val"></option>
                                        </template>
                                    </select>
                                </template>

                                {# Affichage statique si une seule valeur #}
                                <template x-if="carac.valeurs.length === 1">
                                    <div x-init="choices[carac.nom] = carac.valeurs[0]">
                                        <span style="display:inline-flex;align-items:center;gap:0.5rem;padding:0.5rem 1rem;background:#f3f4f6;border-radius:0.5rem;font-weight:600;color:#374151;">
                                            <svg style="width:1rem;height:1rem;color:#7c3aed;flex-shrink:0;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                            </svg>
                                            <span x-text="carac.valeurs[0]"></span>
                                        </span>
                                    </div>
                                </template>
                            </div>
                        </template>

                        {# Sélection incomplète #}
                        <p x-show="!allSelected"
                           style="font-size:0.875rem;color:#dc2626;font-weight:500;">
                            Veuillez sélectionner toutes les options
                        </p>

                        {# Combinaison non disponible #}
                        <p x-show="variantUnavailable"
                           style="font-size:0.875rem;color:#d97706;font-weight:500;background:#fef3c7;padding:0.5rem 0.75rem;border-radius:0.5rem;">
                            Cette combinaison n'est pas disponible
                        </p>
                    </div>

                    {# Quantité et Ajout Panier #}
                    <div class="space-y-4">
                        <label class="block text-lg font-bold text-gray-900">Quantité</label>
                        <div class="flex items-center gap-3 md:gap-6">
                            <div class="flex items-center border-2 border-gray-200 rounded-xl overflow-hidden">
                                <button type="button"
                                        @click="quantity = Math.max(1, quantity - 1)"
                                        class="px-6 py-4 bg-gray-100 hover:bg-gray-200 transition">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                                    </svg>
                                </button>
                                <input type="number"
                                       x-model.number="quantity"
                                       min="1"
                                       class="w-20 px-4 py-4 text-center text-xl font-bold border-0 focus:outline-none">
                                <button type="button"
                                        @click="quantity = quantity + 1"
                                        class="px-6 py-4 bg-gray-100 hover:bg-gray-200 transition">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                    </svg>
                                </button>
                            </div>

                            <button type="button"
                                    x-ref="addBtn"
                                    @click="addToCart()"
                                    :disabled="addingToCart || !allSelected || variantUnavailable"
                                    class="btn-primary flex-1 py-4 text-xl disabled:opacity-50 disabled:cursor-not-allowed">
                                <span x-show="!addingToCart" class="flex items-center justify-center gap-3">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                                    </svg>
                                    Ajouter au Panier
                                </span>
                                <span x-show="addingToCart" class="flex items-center justify-center gap-3">
                                    <svg class="w-6 h-6 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                                    </svg>
                                    Ajout en cours...
                                </span>
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    {# Articles Similaires #}
    {% if similarArticles|length > 0 %}
        <section class="py-24 bg-gradient-to-b from-accent/10 to-white">
            <div class="container mx-auto px-4">
                <h2 class="font-heading text-4xl font-bold text-center mb-12">
                    Vous pourriez aussi <span class="gradient-text">aimer</span>
                </h2>
                <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
                    {% for similar in similarArticles %}
                        <div class="section-appear" style="animation-delay: {{ loop.index * 0.1 }}s;">
                            {% include 'components/article_card.html.twig' with {'article': similar} %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    {% endif %}

    {# Lightbox #}
    <div x-show="lightboxOpen"
         x-cloak
         @keydown.escape.window="lightboxOpen = false"
         class="fixed inset-0 z-50 flex items-center justify-center bg-black/90 p-4"
         @click.self="lightboxOpen = false">
        <button @click="lightboxOpen = false"
                class="absolute top-4 right-4 p-3 text-white hover:bg-white/10 rounded-full transition">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
        {% if article.images|length > 0 %}
            <img :src="images && images[selectedImage] ? images[selectedImage] : '{{ article.images[0].url }}'"
                 alt="{{ article.images[0].alt ?? article.nom }}"
                 class="max-w-full max-h-full object-contain rounded-xl"
                 onerror="this.src='{{ article.images[0].url }}'">
        {% endif %}
    </div>
</div>
{% endblock %}
