{% extends 'base.html.twig' %}

{% block title %}{{ article.nom }} - TDBR{% endblock %}

{% block body %}
<div x-data="{
    selectedImage: 0,
    selectedVariant: {{ article.variantes|length > 0 ? 'null' : 'null' }},
    quantity: 1,
    lightboxOpen: false,
    addingToCart: false,

    get currentPrice() {
        if (this.selectedVariant !== null && {{ article.variantes|json_encode|raw }}[this.selectedVariant]) {
            return {{ article.variantes|json_encode|raw }}[this.selectedVariant].prix;
        }
        return {{ article.prix }};
    },

    get currentStock() {
        if (this.selectedVariant !== null && {{ article.variantes|json_encode|raw }}[this.selectedVariant]) {
            return {{ article.variantes|json_encode|raw }}[this.selectedVariant].stock || 999;
        }
        return {{ article.stock ?? 999 }};
    },

    async addToCart() {
        this.addingToCart = true;

        const data = {
            articleId: '{{ article._id }}',
            quantity: this.quantity
        };

        if (this.selectedVariant !== null) {
            data.variantId = {{ article.variantes|json_encode|raw }}[this.selectedVariant].id;
        }

        try {
            const response = await fetch('{{ path('panier_add') }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            });

            const result = await response.json();

            if (result.success) {
                // Mettre à jour le badge panier dans la navbar
                const badge = document.querySelector('[data-cart-count]');
                if (badge) {
                    badge.textContent = result.cartCount;
                    badge.classList.remove('hidden');
                }

                // Animation de confirmation
                const btn = this.$refs.addBtn;
                btn.classList.add('animate-pulse');
                setTimeout(() => btn.classList.remove('animate-pulse'), 1000);

                // Message de succès
                alert('✓ Article ajouté au panier !');
            }
        } catch (error) {
            alert('Erreur lors de l\'ajout au panier');
        } finally {
            this.addingToCart = false;
        }
    }
}">
    {# Breadcrumb #}
    <section class="bg-gray-50 py-4">
        <div class="container mx-auto px-4">
            <nav class="flex items-center space-x-2 text-sm">
                <a href="{{ path('home') }}" class="text-gray-600 hover:text-primary">Accueil</a>
                <span class="text-gray-400">/</span>
                <a href="{{ path('catalogue') }}" class="text-gray-600 hover:text-primary">Catalogue</a>
                {% if category %}
                    <span class="text-gray-400">/</span>
                    <a href="{{ path('categorie', {slug: category.slug}) }}" class="text-gray-600 hover:text-primary">{{ category.nom }}</a>
                {% endif %}
                <span class="text-gray-400">/</span>
                <span class="text-primary font-medium">{{ article.nom }}</span>
            </nav>
        </div>
    </section>

    {# Contenu Principal #}
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <div class="grid lg:grid-cols-2 gap-16">
                {# Galerie Images #}
                <div class="space-y-6">
                    {# Image principale #}
                    <div class="relative aspect-square bg-gradient-to-br from-accent/20 to-white rounded-2xl overflow-hidden shadow-xl group">
                        {% if article.images|length > 0 %}
                            <img :src="'{{ article.images[0] }}'.split(',')[selectedImage] || '{{ article.images[0] }}'"
                                 alt="{{ article.nom }}"
                                 class="w-full h-full object-cover cursor-zoom-in transition-transform duration-500 group-hover:scale-105"
                                 @click="lightboxOpen = true">

                            {# Badge Nouveau si moins de 7 jours #}
                            {% set daysSinceCreation = 'now'|date('U') - article.createdAt.toDateTime().format('U') %}
                            {% if daysSinceCreation < (7 * 24 * 3600) %}
                                <div class="absolute top-4 left-4 px-4 py-2 bg-gradient-to-r from-secondary to-primary text-white font-bold rounded-full shadow-lg glow">
                                    Nouveau
                                </div>
                            {% endif %}
                        {% else %}
                            <div class="w-full h-full flex items-center justify-center text-gray-400">
                                <svg class="w-24 h-24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                        {% endif %}
                    </div>

                    {# Miniatures #}
                    {% if article.images|length > 1 %}
                        <div class="grid grid-cols-4 gap-4">
                            {% for image in article.images|slice(0, 4) %}
                                <div class="aspect-square bg-gray-100 rounded-xl overflow-hidden cursor-pointer transition-all duration-300 hover:ring-4 hover:ring-primary hover:scale-105"
                                     :class="selectedImage === {{ loop.index0 }} ? 'ring-4 ring-primary' : ''"
                                     @click="selectedImage = {{ loop.index0 }}">
                                    <img src="{{ image }}" alt="{{ article.nom }}" class="w-full h-full object-cover">
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                {# Détails Produit #}
                <div class="space-y-8">
                    {# Titre et collection #}
                    <div>
                        {% if collection %}
                            <a href="{{ path('collection', {slug: collection.slug}) }}"
                               class="inline-flex items-center gap-2 text-sm text-secondary font-semibold hover:text-primary mb-3">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                                </svg>
                                Collection {{ collection.nom }}
                            </a>
                        {% endif %}

                        <h1 class="font-heading text-5xl font-black text-gray-900 mb-4">
                            {{ article.nom }}
                        </h1>

                        {% if article.description %}
                            <p class="text-xl text-gray-600 leading-relaxed">
                                {{ article.description }}
                            </p>
                        {% endif %}
                    </div>

                    {# Prix #}
                    <div class="flex items-baseline gap-4">
                        <span class="text-5xl font-black text-primary" x-text="currentPrice.toFixed(2).replace('.', ',') + ' €'">
                            {{ article.prix|number_format(2, ',', ' ') }} €
                        </span>
                        {% if article.prixBarre %}
                            <span class="text-2xl text-gray-400 line-through">
                                {{ article.prixBarre|number_format(2, ',', ' ') }} €
                            </span>
                        {% endif %}
                    </div>

                    {# Variantes #}
                    {% if article.variantes|length > 0 %}
                        <div class="space-y-3">
                            <label class="block text-lg font-bold text-gray-900">Choisissez une variante</label>
                            <div class="grid grid-cols-2 gap-3">
                                {% for index, variant in article.variantes %}
                                    <button type="button"
                                            @click="selectedVariant = {{ index }}"
                                            :class="selectedVariant === {{ index }} ? 'ring-4 ring-primary bg-primary text-white' : 'bg-gray-100 text-gray-900 hover:bg-gray-200'"
                                            class="px-6 py-4 rounded-xl font-semibold transition-all duration-300">
                                        <div class="text-sm mb-1">{{ variant.nom ?? 'Variante ' ~ (index + 1) }}</div>
                                        <div class="text-lg font-bold">{{ variant.prix|number_format(2, ',', ' ') }} €</div>
                                    </button>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    {# Quantité et Ajout Panier #}
                    <div class="space-y-4">
                        <label class="block text-lg font-bold text-gray-900">Quantité</label>
                        <div class="flex items-center gap-6">
                            <div class="flex items-center border-2 border-gray-200 rounded-xl overflow-hidden">
                                <button type="button"
                                        @click="quantity = Math.max(1, quantity - 1)"
                                        class="px-6 py-4 bg-gray-100 hover:bg-gray-200 transition">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                                    </svg>
                                </button>
                                <input type="number"
                                       x-model.number="quantity"
                                       min="1"
                                       :max="currentStock"
                                       class="w-20 px-4 py-4 text-center text-xl font-bold border-0 focus:outline-none">
                                <button type="button"
                                        @click="quantity = Math.min(currentStock, quantity + 1)"
                                        class="px-6 py-4 bg-gray-100 hover:bg-gray-200 transition">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                    </svg>
                                </button>
                            </div>

                            <button type="button"
                                    x-ref="addBtn"
                                    @click="addToCart()"
                                    :disabled="addingToCart || ({{ article.variantes|length }} > 0 && selectedVariant === null)"
                                    class="btn-primary flex-1 py-4 text-xl disabled:opacity-50 disabled:cursor-not-allowed">
                                <span x-show="!addingToCart" class="flex items-center justify-center gap-3">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                                    </svg>
                                    Ajouter au Panier
                                </span>
                                <span x-show="addingToCart" class="flex items-center justify-center gap-3">
                                    <svg class="w-6 h-6 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                                    </svg>
                                    Ajout en cours...
                                </span>
                            </button>
                        </div>

                        {% if article.variantes|length > 0 %}
                            <p x-show="selectedVariant === null" class="text-sm text-red-600 font-medium">
                                ⚠ Veuillez sélectionner une variante
                            </p>
                        {% endif %}
                    </div>

                    {# Caractéristiques #}
                    {% if article.caracteristiques %}
                        <div class="border-t pt-8">
                            <h3 class="text-2xl font-heading font-bold mb-6">Caractéristiques</h3>
                            <div class="space-y-3">
                                {% for key, value in article.caracteristiques %}
                                    <div class="flex items-start gap-3">
                                        <svg class="w-5 h-5 text-primary flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                        <div>
                                            <span class="font-semibold text-gray-900">{{ key }} :</span>
                                            <span class="text-gray-700">{{ value }}</span>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    {# Avantages #}
                    <div class="border-t pt-8 space-y-4">
                        <div class="flex items-center gap-3 text-gray-700">
                            <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-lg">Livraison gratuite</span>
                        </div>
                        <div class="flex items-center gap-3 text-gray-700">
                            <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-lg">Fait main avec amour</span>
                        </div>
                        <div class="flex items-center gap-3 text-gray-700">
                            <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-lg">Pièce unique</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Articles Similaires #}
    {% if similarArticles|length > 0 %}
        <section class="py-24 bg-gradient-to-b from-accent/10 to-white">
            <div class="container mx-auto px-4">
                <h2 class="font-heading text-4xl font-bold text-center mb-12">
                    Vous pourriez aussi <span class="gradient-text">aimer</span>
                </h2>

                <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
                    {% for similar in similarArticles %}
                        <div class="section-appear" style="animation-delay: {{ loop.index * 0.1 }}s;">
                            {% include 'components/article_card.html.twig' with {'article': similar} %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    {% endif %}

    {# Lightbox #}
    <div x-show="lightboxOpen"
         x-cloak
         @keydown.escape.window="lightboxOpen = false"
         class="fixed inset-0 z-50 flex items-center justify-center bg-black/90 p-4"
         @click.self="lightboxOpen = false">
        <button @click="lightboxOpen = false"
                class="absolute top-4 right-4 p-3 text-white hover:bg-white/10 rounded-full transition">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>

        {% if article.images|length > 0 %}
            <img :src="'{{ article.images[0] }}'.split(',')[selectedImage] || '{{ article.images[0] }}'"
                 alt="{{ article.nom }}"
                 class="max-w-full max-h-full object-contain rounded-xl">
        {% endif %}
    </div>
</div>
{% endblock %}
