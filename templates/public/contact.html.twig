{% extends 'base.html.twig' %}

{% block title %}Contact - TDBR{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-b from-gray-50 to-white py-12">
        <div class="container mx-auto px-4">
            {# Main Grid: 2 columns on desktop, stack on mobile #}
            <div class="grid lg:grid-cols-12 gap-8 max-w-7xl mx-auto">

                {# Left Sidebar (sticky) #}
                <aside class="lg:col-span-4 space-y-6">
                    <div class="lg:sticky lg:top-8 space-y-6">
                        {# Page Title Section #}
                        <div>
                            <h1 class="font-heading text-4xl md:text-5xl font-bold text-gray-900 mb-4">
                                Contactez-nous
                            </h1>
                            <p class="text-lg text-gray-600 leading-relaxed">
                                Une question, un projet sur mesure ou besoin d'un devis ?
                                Nous sommes l√† pour vous accompagner dans votre d√©marche.
                            </p>
                        </div>

                        {# Info Cards #}
                        <div class="space-y-4">
                            {# Email Card #}
                            <div class="card p-6 flex items-start gap-4">
                                <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-xl flex items-center justify-center text-2xl">
                                    üìß
                                </div>
                                <div>
                                    <h3 class="font-semibold text-gray-900 mb-1">Email</h3>
                                    <a href="mailto:contact@tdbr.fr" class="text-primary hover:text-secondary transition-smooth">
                                        contact@tdbr.fr
                                    </a>
                                </div>
                            </div>

                            {# Response Time Card #}
                            <div class="card p-6 flex items-start gap-4">
                                <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-xl flex items-center justify-center text-2xl">
                                    ‚è∞
                                </div>
                                <div>
                                    <h3 class="font-semibold text-gray-900 mb-1">D√©lai de r√©ponse</h3>
                                    <p class="text-gray-600">R√©ponse sous 24-48h</p>
                                </div>
                            </div>

                            {# Custom Projects Card #}
                            <div class="card p-6 flex items-start gap-4">
                                <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-xl flex items-center justify-center text-2xl">
                                    üé®
                                </div>
                                <div>
                                    <h3 class="font-semibold text-gray-900 mb-1">Sur mesure</h3>
                                    <p class="text-gray-600">Projets personnalis√©s selon vos besoins</p>
                                </div>
                            </div>
                        </div>

                        {# Devis CTA Card #}
                        <div class="card overflow-hidden bg-gradient-to-br from-gray-900 via-primary to-gray-900 text-white p-8 relative">
                            <div class="absolute inset-0 opacity-20">
                                <div class="absolute top-0 left-0 w-32 h-32 bg-secondary rounded-full filter blur-2xl"></div>
                                <div class="absolute bottom-0 right-0 w-32 h-32 bg-secondary rounded-full filter blur-2xl"></div>
                            </div>
                            <div class="relative z-10">
                                <h3 class="font-heading text-2xl font-bold mb-3">Besoin d'un devis ?</h3>
                                <p class="text-gray-300 mb-6 leading-relaxed">
                                    D√©crivez-nous votre projet et recevez une estimation personnalis√©e rapidement.
                                </p>
                                <p class="text-sm text-gray-400">
                                    Envoyez-nous un message avec le sujet "Devis" ‚Üí
                                </p>
                            </div>
                        </div>
                    </div>
                </aside>

                {# Right Form Section #}
                <div class="lg:col-span-8">

                    {% if not app.user %}
                        <div class="mb-6 p-5 bg-amber-50 border border-amber-200 rounded-2xl flex flex-col sm:flex-row items-start sm:items-center gap-4">
                            <svg class="w-6 h-6 text-amber-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                            <div class="flex-1">
                                <p class="font-semibold text-amber-800">Connectez-vous pour envoyer votre message</p>
                                <p class="text-sm text-amber-700 mt-1">Votre nom et email seront pr√©-remplis automatiquement depuis votre compte.</p>
                            </div>
                            <a href="{{ path('connexion') }}" class="btn-primary text-sm whitespace-nowrap flex-shrink-0">
                                Se connecter
                            </a>
                        </div>
                    {% endif %}

                    <div class="card p-8 md:p-10">
                        {# Contact Form #}
                        <form method="post" class="space-y-6">
                            <div>
                                <h2 class="font-heading text-2xl md:text-3xl font-bold text-gray-900 mb-2">
                                    Envoyez-nous un message
                                </h2>
                                <p class="text-gray-600">
                                    Remplissez le formulaire ci-dessous et nous vous r√©pondrons rapidement.
                                </p>
                            </div>

                            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                            {# Name Field #}
                            <div>
                                {{ form_label(form.nom, 'Nom complet', {
                                    'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}
                                }) }}
                                {{ form_widget(form.nom, {
                                    'attr': {
                                        'class': 'w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary focus:ring focus:ring-primary/20 transition-smooth',
                                        'placeholder': 'Jean Dupont'
                                    }
                                }) }}
                                {{ form_errors(form.nom) }}
                            </div>

                            {# Email Field #}
                            <div>
                                {{ form_label(form.email, 'Adresse email', {
                                    'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}
                                }) }}
                                {{ form_widget(form.email, {
                                    'attr': {
                                        'class': 'w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary focus:ring focus:ring-primary/20 transition-smooth',
                                        'placeholder': 'jean.dupont@example.com'
                                    }
                                }) }}
                                {{ form_errors(form.email) }}
                            </div>

                            {# Subject Dropdown #}
                            <div>
                                {{ form_label(form.sujet, 'Sujet', {
                                    'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}
                                }) }}
                                {{ form_widget(form.sujet, {
                                    'attr': {
                                        'class': 'w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary focus:ring focus:ring-primary/20 transition-smooth'
                                    }
                                }) }}
                                {{ form_errors(form.sujet) }}
                            </div>

                            {# Message Textarea #}
                            <div>
                                {{ form_label(form.message, 'Message', {
                                    'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}
                                }) }}
                                {{ form_widget(form.message, {
                                    'attr': {
                                        'class': 'w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary focus:ring focus:ring-primary/20 transition-smooth resize-none',
                                        'rows': '6',
                                        'placeholder': 'D√©crivez votre demande en d√©tail...'
                                    }
                                }) }}
                                {{ form_errors(form.message) }}
                                <p class="mt-2 text-xs text-gray-500 text-right">
                                    Maximum 500 caract√®res
                                </p>
                            </div>

                            {# Submit Button #}
                            <div class="pt-4">
                                {% if app.user %}
                                    <button type="submit" class="btn-primary w-full md:w-auto px-8 py-4 text-lg">
                                        Envoyer le message
                                    </button>
                                {% else %}
                                    <a href="{{ path('connexion') }}" class="btn-primary inline-block px-8 py-4 text-lg">
                                        Se connecter pour envoyer
                                    </a>
                                {% endif %}
                            </div>

                            {# Required Fields Note #}
                            <p class="text-sm text-gray-500 pt-2">
                                <span class="text-red-500">*</span> Champs obligatoires
                            </p>

                            {{ form_end(form) }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
