{% extends 'base.html.twig' %}

{% block title %}Commande Confirmée - TDBR{% endblock %}

{% block body %}
    {# Confirmation Hero #}
    <section class="py-24 bg-gradient-to-br from-green-50 to-white relative overflow-hidden">
        {# Confetti effect #}
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
            {% for i in 1..30 %}
                <div class="absolute w-2 h-2 rounded-full"
                     style="
                        left: {{ random(0, 100) }}%;
                        top: {{ random(-20, 100) }}%;
                        background: {{ random(['#8B7355', '#D4AF7A', '#F5E6D3', '#2C2416']) }};
                        animation: float {{ random(3, 8) }}s ease-in-out infinite {{ random(0, 3) }}s;
                        opacity: {{ random(30, 80) / 100 }};
                     ">
                </div>
            {% endfor %}
        </div>

        <div class="container mx-auto px-4 relative z-10">
            <div class="max-w-3xl mx-auto text-center">
                {# Checkmark animé #}
                <div class="inline-flex items-center justify-center w-32 h-32 bg-gradient-to-br from-green-400 to-green-600 text-white rounded-full mb-8 shadow-2xl animate-bounce">
                    <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                    </svg>
                </div>

                <h1 class="font-heading text-5xl md:text-6xl font-black mb-6">
                    Commande <span class="gradient-text">Confirmée</span> !
                </h1>

                <p class="text-2xl text-gray-700 mb-8 leading-relaxed">
                    Merci pour votre confiance ! Votre commande a été enregistrée avec succès.
                </p>

                <div class="inline-flex items-center gap-3 px-8 py-4 bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg">
                    <span class="text-sm font-medium text-gray-600">Numéro de commande :</span>
                    <span class="text-2xl font-black text-primary">{{ commande.numero }}</span>
                </div>

                <p class="mt-8 text-lg text-gray-600">
                    Un email de confirmation a été envoyé à <strong>{{ commande.client.email }}</strong>
                </p>
            </div>
        </div>
    </section>

    {# Détails Commande #}
    <section class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <div class="max-w-5xl mx-auto grid lg:grid-cols-2 gap-12">
                {# Informations Client #}
                <div class="card p-8">
                    <h2 class="font-heading text-3xl font-bold mb-6 flex items-center gap-3">
                        <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        Vos Informations
                    </h2>

                    <div class="space-y-4 text-gray-700">
                        <div class="flex items-start gap-3">
                            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <div>
                                <div class="text-sm text-gray-500">Nom complet</div>
                                <div class="font-semibold text-lg">{{ commande.client.prenom }} {{ commande.client.nom }}</div>
                            </div>
                        </div>

                        <div class="flex items-start gap-3">
                            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                            <div>
                                <div class="text-sm text-gray-500">Email</div>
                                <div class="font-semibold">{{ commande.client.email }}</div>
                            </div>
                        </div>

                        <div class="flex items-start gap-3">
                            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                            </svg>
                            <div>
                                <div class="text-sm text-gray-500">Téléphone</div>
                                <div class="font-semibold">{{ commande.client.telephone }}</div>
                            </div>
                        </div>
                    </div>
                </div>

                {# Livraison #}
                {% set livraison = commande.modeLivraison %}
                <div class="card p-8">
                    <h2 class="font-heading text-3xl font-bold mb-6 flex items-center gap-3">
                        <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                        </svg>
                        Livraison
                    </h2>

                    <div class="bg-gradient-to-br from-accent/20 to-white p-6 rounded-xl">
                        {% if livraison %}
                            <div class="font-semibold text-primary mb-3">{{ livraison.label }}</div>
                        {% endif %}

                        {% if livraison and livraison.type == 'relais' %}
                            <div class="space-y-1 text-gray-700">
                                <div class="font-semibold text-lg">{{ livraison.pointRelaisNom ?? '' }}</div>
                                <div>{{ livraison.pointRelaisAdresse ?? '' }}</div>
                            </div>
                        {% else %}
                            <div class="space-y-2 text-gray-700">
                                <div class="font-semibold text-lg">{{ commande.adresseLivraison.adresse }}</div>
                                {% if commande.adresseLivraison.complementAdresse %}
                                    <div>{{ commande.adresseLivraison.complementAdresse }}</div>
                                {% endif %}
                                <div>{{ commande.adresseLivraison.codePostal }} {{ commande.adresseLivraison.ville }}</div>
                                <div class="font-semibold">{{ commande.adresseLivraison.pays }}</div>
                            </div>
                        {% endif %}
                    </div>

                    <div class="mt-6 p-4 bg-blue-50 rounded-lg border border-blue-200">
                        <div class="flex items-start gap-3">
                            <svg class="w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <div class="text-sm text-blue-800">
                                {% if livraison and livraison.type == 'relais' %}
                                    <strong>Point relais :</strong> Vous serez prévenu(e) par email dès que votre commande est disponible au retrait.
                                {% elseif livraison and livraison.type == 'toulouse' %}
                                    <strong>Récupération Toulouse :</strong> Remise en main propre 1 fois par mois — nous vous contacterons pour convenir des modalités.
                                {% else %}
                                    <strong>Livraison estimée :</strong> Environ 1 semaine. Les articles étant expédiés directement par les fournisseurs, plusieurs livraisons peuvent arriver séparément.
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Articles Commandés #}
            <div class="max-w-5xl mx-auto mt-12">
                <div class="card p-8">
                    <h2 class="font-heading text-3xl font-bold mb-6 flex items-center gap-3">
                        <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                        </svg>
                        Articles Commandés
                    </h2>

                    <div class="space-y-4">
                        {% for item in commande.articles %}
                            <div class="flex gap-6 p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition">
                                <div class="w-20 h-20 bg-white rounded-lg overflow-hidden flex-shrink-0 shadow-sm">
                                    {% if item.image %}
                                        <img src="{{ item.image }}" alt="{{ item.nom }}" class="w-full h-full object-contain">
                                    {% else %}
                                        <div class="w-full h-full flex items-center justify-center text-gray-400">
                                            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                            </svg>
                                        </div>
                                    {% endif %}
                                </div>

                                <div class="flex-1">
                                    <h3 class="font-heading text-xl font-bold mb-2">{{ item.nom }}</h3>
                                    {% if item.variant %}
                                        <p class="text-sm text-gray-600 mb-2">Variante: {{ item.variant.nom }}</p>
                                    {% endif %}
                                    <div class="flex items-center gap-4 text-gray-700">
                                        <span class="font-medium">Quantité: {{ item.quantity }}</span>
                                        <span class="text-gray-400">•</span>
                                        <span class="font-bold text-primary text-lg">{{ item.prix|number_format(2, ',', ' ') }} €</span>
                                    </div>
                                </div>

                                <div class="text-right">
                                    <div class="text-sm text-gray-500 mb-1">Sous-total</div>
                                    <div class="text-2xl font-bold text-primary">{{ (item.prix * item.quantity)|number_format(2, ',', ' ') }} €</div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <div class="mt-8 pt-8 border-t flex justify-between items-center">
                        <div>
                            <div class="text-sm text-gray-600 mb-1">Mode de paiement</div>
                            <div class="font-semibold text-lg capitalize">
                                {% if commande.modePaiement == 'stripe' %}
                                    Carte Bancaire (Stripe)
                                {% elseif commande.modePaiement == 'carte' %}
                                    Carte Bancaire
                                {% elseif commande.modePaiement == 'virement' %}
                                    Virement Bancaire
                                {% elseif commande.modePaiement == 'paypal' %}
                                    PayPal
                                {% endif %}
                            </div>
                        </div>
                        <div class="text-right">
                            <div class="text-sm text-gray-600 mb-1">Total de la commande</div>
                            <div class="text-4xl font-black text-primary">{{ commande.total|number_format(2, ',', ' ') }} €</div>
                        </div>
                    </div>

                    {% if commande.notes %}
                        <div class="mt-6 p-4 bg-yellow-50 rounded-lg border border-yellow-200">
                            <div class="flex items-start gap-3">
                                <svg class="w-5 h-5 text-yellow-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                                <div>
                                    <div class="text-sm font-semibold text-yellow-800 mb-1">Vos notes :</div>
                                    <div class="text-sm text-yellow-700">{{ commande.notes }}</div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            {# Prochaines Étapes #}
            <div class="max-w-5xl mx-auto mt-12">
                <div class="bg-gradient-to-br from-primary/5 to-secondary/5 rounded-2xl p-8">
                    <h3 class="font-heading text-2xl font-bold mb-6 text-center">Et maintenant ?</h3>

                    <div class="grid md:grid-cols-3 gap-8">
                        <div class="text-center">
                            <div class="w-16 h-16 bg-primary text-white rounded-full flex items-center justify-center mx-auto mb-4 font-bold text-2xl">
                                1
                            </div>
                            <h4 class="font-heading font-bold mb-2">Confirmation</h4>
                            <p class="text-sm text-gray-600">Vous allez recevoir un email de confirmation sous quelques minutes</p>
                        </div>
                        <div class="text-center">
                            <div class="w-16 h-16 bg-secondary text-white rounded-full flex items-center justify-center mx-auto mb-4 font-bold text-2xl">
                                2
                            </div>
                            <h4 class="font-heading font-bold mb-2">Préparation</h4>
                            <p class="text-sm text-gray-600">Nous préparons votre commande avec soin et amour</p>
                        </div>
                        <div class="text-center">
                            <div class="w-16 h-16 bg-gradient-to-r from-primary to-secondary text-white rounded-full flex items-center justify-center mx-auto mb-4 font-bold text-2xl">
                                3
                            </div>
                            <h4 class="font-heading font-bold mb-2">Livraison</h4>
                            <p class="text-sm text-gray-600">Votre colis sera expédié dans les 2-3 jours ouvrés</p>
                        </div>
                    </div>
                </div>
            </div>

            {# Actions #}
            <div class="max-w-5xl mx-auto mt-12 flex flex-col sm:flex-row gap-6 justify-center">
                <a href="{{ path('commande_facture', {id: commande.id}) }}" target="_blank"
                   class="btn-outline text-lg px-10 py-4 text-center inline-flex items-center justify-center gap-3">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    Télécharger la facture
                </a>
                <a href="{{ path('home') }}" class="btn-outline text-lg px-10 py-4 text-center">
                    <span class="flex items-center justify-center gap-3">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                        Retour à l'Accueil
                    </span>
                </a>
                <a href="{{ path('catalogue') }}" class="btn-primary text-lg px-10 py-4 text-center">
                    <span class="flex items-center justify-center gap-3">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                        </svg>
                        Continuer vos Achats
                    </span>
                </a>
            </div>
        </div>
    </section>
{% endblock %}
