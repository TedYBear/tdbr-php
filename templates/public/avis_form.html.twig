{% extends 'base.html.twig' %}

{% block title %}Laisser un avis - TDBR{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-b from-gray-50 to-white py-12">
        <div class="container mx-auto px-4 max-w-2xl">

            {# Breadcrumb #}
            <div class="mb-8">
                <a href="{{ path('avis_liste') }}" class="text-sm text-gray-500 hover:text-primary transition flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                    Retour aux avis
                </a>
            </div>

            <div class="card p-6 md:p-10">
                <div class="mb-8">
                    <h1 class="font-heading text-3xl font-bold text-gray-900 mb-2">
                        Partagez votre avis
                    </h1>
                    <p class="text-gray-600">
                        Votre témoignage sera publié après validation par notre équipe.
                    </p>
                </div>

                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'class': 'space-y-6'}}) }}

                {# Contenu #}
                <div>
                    {{ form_label(form.contenu, null, {
                        'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}
                    }) }}
                    {{ form_widget(form.contenu, {
                        'attr': {
                            'class': 'w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary focus:ring focus:ring-primary/20 transition-smooth resize-none'
                        }
                    }) }}
                    {{ form_errors(form.contenu) }}
                    <p class="mt-1 text-xs text-gray-500 text-right">Maximum 1000 caractères</p>
                </div>

                {# Note #}
                <div>
                    {{ form_label(form.note, null, {
                        'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}
                    }) }}
                    {{ form_widget(form.note, {
                        'attr': {
                            'class': 'w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary focus:ring focus:ring-primary/20 transition-smooth'
                        }
                    }) }}
                    {{ form_errors(form.note) }}
                </div>

                {# Photo #}
                <div>
                    {{ form_label(form.photo, null, {
                        'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}
                    }) }}
                    <div class="border-2 border-dashed border-gray-200 rounded-xl p-6 text-center">
                        {{ form_widget(form.photo, {
                            'attr': {'class': 'w-full text-sm text-gray-600'}
                        }) }}
                        <p class="mt-2 text-xs text-gray-500">JPG, PNG ou WEBP — Max 2 Mo</p>
                    </div>
                    {{ form_errors(form.photo) }}
                </div>

                {# Submit #}
                <div class="flex gap-4 pt-2">
                    <button type="submit" class="btn-primary px-8 py-3">
                        Envoyer mon avis
                    </button>
                    <a href="{{ path('avis_liste') }}" class="btn-outline px-8 py-3">
                        Annuler
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
