{% extends 'base.html.twig' %}

{% block title %}Panier - TDBR{% endblock %}

{% block body %}
    {# Hero Section #}
    <section class="py-16 bg-gradient-to-br from-accent to-white">
        <div class="container mx-auto px-4">
            <div class="text-center">
                <h1 class="font-heading text-5xl md:text-6xl font-black mb-4">
                    Votre <span class="gradient-text">Panier</span>
                </h1>
                <p class="text-lg text-gray-700">
                    {{ quantity }} article{{ quantity > 1 ? 's' : '' }} dans votre panier
                </p>
            </div>
        </div>
    </section>

    {# Panier Content #}
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            {% if items|length > 0 %}
                <div class="grid lg:grid-cols-3 gap-12">
                    {# Liste articles #}
                    <div class="lg:col-span-2 space-y-6">
                        {% for itemId, item in items %}
                            <div class="card p-4 md:p-6 hover:shadow-xl transition-all duration-300">
                                <div class="flex gap-4 md:gap-6">
                                    {# Image #}
                                    <div class="flex-shrink-0">
                                        <div class="w-20 h-20 md:w-32 md:h-32 rounded-xl overflow-hidden bg-gray-100">
                                            {% if item.article.images is defined and item.article.images|length > 0 %}
                                                <img src="{{ item.article.images[0]|to_string }}"
                                                     alt="{{ item.article.nom }}"
                                                     class="w-full h-full object-contain">
                                            {% else %}
                                                <div class="w-full h-full flex items-center justify-center text-gray-400">
                                                    <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                                    </svg>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>

                                    {# Détails #}
                                    <div class="flex-1">
                                        <h3 class="font-heading text-xl font-bold mb-2">
                                            {{ item.article.nom }}
                                        </h3>

                                        {% if item.variant %}
                                            <p class="text-sm text-gray-600 mb-3">
                                                <span class="inline-flex items-center gap-1">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                                                    </svg>
                                                    Variante: {{ item.variant.nom ?? 'Standard' }}
                                                </span>
                                            </p>
                                        {% endif %}

                                        <div class="flex flex-wrap items-center gap-3 md:gap-6">
                                            {# Quantité #}
                                            <form method="post" action="{{ path('panier_update', {itemId: itemId}) }}" class="flex items-center gap-2">
                                                <label class="text-sm font-medium text-gray-700">Quantité:</label>
                                                <div class="flex items-center border-2 border-gray-200 rounded-lg overflow-hidden">
                                                    <button type="button"
                                                            onclick="this.nextElementSibling.stepDown(); this.form.submit();"
                                                            class="px-4 py-2 bg-gray-100 hover:bg-gray-200 transition">
                                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                                                        </svg>
                                                    </button>
                                                    <input type="number"
                                                           name="quantity"
                                                           value="{{ item.quantity }}"
                                                           min="1"
                                                           max="99"
                                                           class="w-16 px-3 py-2 text-center border-0 focus:outline-none">
                                                    <button type="button"
                                                            onclick="this.previousElementSibling.stepUp(); this.form.submit();"
                                                            class="px-4 py-2 bg-gray-100 hover:bg-gray-200 transition">
                                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                                        </svg>
                                                    </button>
                                                </div>
                                            </form>

                                            {# Prix unitaire #}
                                            <div class="text-lg font-bold text-primary">
                                                {{ (item.variant.prix ?? item.variant.prixBase ?? item.article.prix ?? item.article.prixBase ?? 0)|number_format(2, ',', ' ') }} €
                                            </div>
                                        </div>
                                    </div>

                                    {# Supprimer #}
                                    <div>
                                        <form method="post" action="{{ path('panier_remove', {itemId: itemId}) }}" onsubmit="return confirm('Retirer cet article du panier ?');">
                                            <button type="submit"
                                                    class="p-3 text-red-500 hover:bg-red-50 rounded-lg transition"
                                                    title="Retirer">
                                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                </div>

                                {# Sous-total #}
                                <div class="mt-4 pt-4 border-t flex justify-between items-center">
                                    <span class="text-sm text-gray-600">Sous-total</span>
                                    <span class="text-xl font-bold text-primary">
                                        {{ ((item.variant.prix ?? item.variant.prixBase ?? item.article.prix ?? item.article.prixBase ?? 0) * item.quantity)|number_format(2, ',', ' ') }} €
                                    </span>
                                </div>
                            </div>
                        {% endfor %}

                        {# Vider le panier #}
                        <form method="post" action="{{ path('panier_clear') }}" onsubmit="return confirm('Êtes-vous sûr de vouloir vider le panier ?');" class="mt-8">
                            <button type="submit" class="text-red-600 hover:text-red-700 font-medium inline-flex items-center gap-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                                Vider le panier
                            </button>
                        </form>
                    </div>

                    {# Récapitulatif #}
                    <div class="lg:col-span-1">
                        <div class="card p-8 sticky top-24">
                            <h2 class="font-heading text-2xl font-bold mb-6">Récapitulatif</h2>

                            <div class="space-y-4 mb-6 pb-6 border-b">
                                <div class="flex justify-between text-gray-700">
                                    <span>Sous-total ({{ quantity }} article{{ quantity > 1 ? 's' : '' }})</span>
                                    <span class="font-semibold">{{ total|number_format(2, ',', ' ') }} €</span>
                                </div>
                                <div class="flex justify-between text-gray-700">
                                    <span>Livraison</span>
                                    <span class="font-semibold text-green-600">Gratuite</span>
                                </div>
                            </div>

                            <div class="flex justify-between text-xl font-bold mb-8">
                                <span>Total</span>
                                <span class="text-primary text-3xl">{{ total|number_format(2, ',', ' ') }} €</span>
                            </div>

                            <button type="button" disabled
                                    class="w-full text-center text-lg py-4 mb-2 bg-gray-200 text-gray-400 rounded-xl cursor-not-allowed font-semibold">
                                Commande temporairement indisponible
                            </button>
                            <p class="text-xs text-gray-500 text-center mb-4">
                                Vous pouvez <a href="{{ path('devis') }}" class="underline hover:text-gray-700">faire un devis</a>
                                ou <a href="{{ path('contact') }}" class="underline hover:text-gray-700">nous contacter</a>.
                            </p>

                            <a href="{{ path('catalogue') }}" class="btn-outline w-full text-center">
                                Continuer mes achats
                            </a>

                        </div>
                    </div>
                </div>
            {% else %}
                {# Panier vide #}
                <div class="text-center py-16 md:py-32">
                    <div class="inline-flex items-center justify-center w-24 h-24 md:w-40 md:h-40 bg-gradient-to-br from-primary/10 to-secondary/10 rounded-full mb-8 md:mb-10">
                        <svg class="w-12 h-12 md:w-20 md:h-20 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                        </svg>
                    </div>
                    <h2 class="font-heading text-4xl font-bold mb-6">Votre panier est vide</h2>
                    <p class="text-xl text-gray-600 mb-10 max-w-md mx-auto">
                        Découvrez nos créations uniques et ajoutez vos coups de cœur !
                    </p>
                    <a href="{{ path('catalogue') }}" class="btn-primary text-lg inline-flex items-center gap-3">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                        </svg>
                        Découvrir le Catalogue
                    </a>
                </div>
            {% endif %}
        </div>
    </section>

{% endblock %}
