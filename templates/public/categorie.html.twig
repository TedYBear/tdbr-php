{% extends 'base.html.twig' %}

{% block title %}{{ category.nom }} - Catalogue TDBR{% endblock %}

{% block body %}
    {# Hero Section avec image de catégorie #}
    <section class="relative py-24 bg-gradient-to-br from-accent to-white overflow-hidden">
        {% if category.image is defined %}
            <div class="absolute inset-0 opacity-10">
                <img src="{{ category.image }}" alt="{{ category.nom }}" class="w-full h-full object-cover">
            </div>
        {% endif %}

        <div class="container mx-auto px-4 relative z-10">
            <div class="max-w-3xl mx-auto text-center">
                {# Breadcrumb #}
                <nav class="mb-8 flex justify-center">
                    <ol class="flex items-center space-x-2 text-sm">
                        <li><a href="{{ path('home') }}" class="text-gray-600 hover:text-primary">Accueil</a></li>
                        <li class="text-gray-400">/</li>
                        <li><a href="{{ path('catalogue') }}" class="text-gray-600 hover:text-primary">Catalogue</a></li>
                        <li class="text-gray-400">/</li>
                        <li class="text-primary font-medium">{{ category.nom }}</li>
                    </ol>
                </nav>

                <h1 class="font-heading text-6xl font-black mb-6">
                    <span class="gradient-text">{{ category.nom }}</span>
                </h1>

                {% if category.description is defined %}
                    <p class="text-xl text-gray-700 leading-relaxed">
                        {{ category.description }}
                    </p>
                {% endif %}

            </div>
        </div>
    </section>

    {# Collections Section #}
    <section class="py-12 bg-white">
        <div class="container mx-auto px-4">
            {% if collections|length > 0 %}
                <h2 class="font-heading text-3xl font-bold mb-8">Collections</h2>
                <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-16">
                    {% for collection in collections %}
                        {% include 'components/collection_card.html.twig' with {'collection': collection} %}
                    {% endfor %}
                </div>
            {% endif %}

            {# Articles en Vedette #}
            <div class="mt-16">
                <h2 class="font-heading text-3xl font-bold mb-8">Articles en Vedette</h2>

                {% if articles|length > 0 %}
                    <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                        {% for article in articles %}
                            {% include 'components/article_card.html.twig' with {'article': article} %}
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center py-12 bg-gray-50 rounded-2xl">
                        <p class="text-gray-600">Aucun article en vedette pour cette catégorie.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>

    {# Autres catégories #}
    <section class="py-20 bg-gradient-to-b from-accent/10 to-white">
        <div class="container mx-auto px-4">
            <h2 class="font-heading text-4xl font-bold text-center mb-12">
                Découvrez aussi nos <span class="gradient-text">autres catégories</span>
            </h2>

            <div class="flex flex-wrap justify-center gap-4">
                <a href="{{ path('catalogue') }}" class="btn-outline">
                    Toutes les catégories
                </a>
                {# Ici vous pourriez lister d'autres catégories #}
            </div>
        </div>
    </section>
{% endblock %}
