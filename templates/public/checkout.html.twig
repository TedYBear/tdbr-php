{% extends 'base.html.twig' %}

{% block title %}Commande - TDBR{% endblock %}

{% block body %}
    {# Hero Section #}
    <section class="py-12 bg-gradient-to-br from-accent to-white">
        <div class="container mx-auto px-4">
            <div class="text-center">
                <h1 class="font-heading text-5xl md:text-6xl font-black mb-4">
                    Finaliser votre <span class="gradient-text">Commande</span>
                </h1>
                <p class="text-lg text-gray-700">
                    Plus qu'une étape avant de recevoir vos créations uniques !
                </p>
            </div>

            {# Steps Indicator #}
            <div class="mt-12 max-w-3xl mx-auto">
                <div class="flex items-center justify-between">
                    <div class="flex flex-col items-center flex-1">
                        <div class="w-12 h-12 bg-primary text-white rounded-full flex items-center justify-center font-bold text-lg shadow-lg">
                            ✓
                        </div>
                        <span class="mt-2 text-sm font-medium text-gray-700">Panier</span>
                    </div>
                    <div class="h-1 bg-primary flex-1 mx-4"></div>
                    <div class="flex flex-col items-center flex-1">
                        <div class="w-12 h-12 bg-gradient-to-r from-primary to-secondary text-white rounded-full flex items-center justify-center font-bold text-lg shadow-lg glow">
                            2
                        </div>
                        <span class="mt-2 text-sm font-medium text-primary">Informations</span>
                    </div>
                    <div class="h-1 bg-gray-200 flex-1 mx-4"></div>
                    <div class="flex flex-col items-center flex-1">
                        <div class="w-12 h-12 bg-gray-200 text-gray-400 rounded-full flex items-center justify-center font-bold text-lg">
                            3
                        </div>
                        <span class="mt-2 text-sm font-medium text-gray-400">Confirmation</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Checkout Content #}
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            {{ form_start(form, {'attr': {'class': 'grid lg:grid-cols-3 gap-12'}}) }}

                {# Formulaire #}
                <div class="lg:col-span-2 space-y-10">
                    {# Informations Client #}
                    <div class="card p-8">
                        <h2 class="font-heading text-3xl font-bold mb-6 flex items-center gap-3">
                            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            Vos Informations
                        </h2>

                        <div class="grid md:grid-cols-2 gap-6">
                            <div class="form-group">
                                {{ form_label(form.prenom) }}
                                {{ form_widget(form.prenom) }}
                                {{ form_errors(form.prenom) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.nom) }}
                                {{ form_widget(form.nom) }}
                                {{ form_errors(form.nom) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.telephone) }}
                                {{ form_widget(form.telephone) }}
                                {{ form_errors(form.telephone) }}
                            </div>
                        </div>
                    </div>

                    {# Adresse de Livraison #}
                    <div class="card p-8">
                        <h2 class="font-heading text-3xl font-bold mb-6 flex items-center gap-3">
                            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            Adresse de Livraison
                        </h2>

                        <div class="space-y-6">
                            <div class="form-group">
                                {{ form_label(form.adresse) }}
                                {{ form_widget(form.adresse) }}
                                {{ form_errors(form.adresse) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.complementAdresse) }}
                                {{ form_widget(form.complementAdresse) }}
                                {{ form_errors(form.complementAdresse) }}
                            </div>
                            <div class="grid md:grid-cols-3 gap-6">
                                <div class="form-group">
                                    {{ form_label(form.codePostal) }}
                                    {{ form_widget(form.codePostal) }}
                                    {{ form_errors(form.codePostal) }}
                                </div>
                                <div class="form-group md:col-span-2">
                                    {{ form_label(form.ville) }}
                                    {{ form_widget(form.ville) }}
                                    {{ form_errors(form.ville) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.pays) }}
                                {{ form_widget(form.pays) }}
                                {{ form_errors(form.pays) }}
                            </div>
                        </div>
                    </div>

                    {# Notes #}
                    <div class="card p-8">
                        <h2 class="font-heading text-3xl font-bold mb-6 flex items-center gap-3">
                            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            Notes (optionnel)
                        </h2>

                        <div class="form-group">
                            {{ form_widget(form.notes) }}
                            {{ form_errors(form.notes) }}
                        </div>
                    </div>

                    {# Paiement #}
                    <div class="card p-8">
                        <h2 class="font-heading text-3xl font-bold mb-6 flex items-center gap-3">
                            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                            </svg>
                            Mode de Paiement
                        </h2>

                        <div class="space-y-4">
                            {% for choice in form.modePaiement %}
                                <label class="flex items-center gap-4 p-4 border-2 rounded-xl cursor-pointer transition-all hover:border-primary hover:bg-accent/20">
                                    {{ form_widget(choice) }}
                                    <div class="flex-1">
                                        <div class="font-semibold text-lg">{{ choice.vars.label }}</div>
                                        {% if choice.vars.value == 'carte' %}
                                            <div class="text-sm text-gray-600">Paiement sécurisé par carte bancaire</div>
                                        {% elseif choice.vars.value == 'virement' %}
                                            <div class="text-sm text-gray-600">Virement bancaire (délai de traitement 2-3 jours)</div>
                                        {% elseif choice.vars.value == 'paypal' %}
                                            <div class="text-sm text-gray-600">Paiement rapide et sécurisé via PayPal</div>
                                        {% endif %}
                                    </div>
                                </label>
                            {% endfor %}
                            {{ form_errors(form.modePaiement) }}
                        </div>
                    </div>
                </div>

                {# Récapitulatif Commande #}
                <div class="lg:col-span-1">
                    <div class="card p-8 sticky top-24">
                        <h2 class="font-heading text-2xl font-bold mb-6">Récapitulatif</h2>

                        {# Articles #}
                        <div class="space-y-4 mb-6 pb-6 border-b max-h-96 overflow-y-auto">
                            {% for itemId, item in cartItems %}
                                <div class="flex gap-4">
                                    <div class="w-16 h-16 bg-gray-100 rounded-lg overflow-hidden flex-shrink-0">
                                        {% if item.article.images|length > 0 %}
                                            <img src="{{ item.article.images[0]|to_string }}" alt="{{ item.article.nom }}" class="w-full h-full object-cover">
                                        {% endif %}
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <h4 class="font-semibold text-sm truncate">{{ item.article.nom }}</h4>
                                        {% if item.variant %}
                                            <p class="text-xs text-gray-600">{{ item.variant.nom ?? 'Standard' }}</p>
                                        {% endif %}
                                        <p class="text-sm text-gray-900 mt-1">
                                            <span class="font-bold">{{ item.quantity }}x</span>
                                            <span class="ml-2">{{ (item.variant.prix ?? item.variant.prixBase ?? item.article.prix ?? item.article.prixBase ?? 0)|number_format(2, ',', ' ') }} €</span>
                                        </p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                        {# Totaux #}
                        <div class="space-y-3 mb-6 pb-6 border-b">
                            <div class="flex justify-between text-gray-700">
                                <span>Sous-total ({{ quantity }} article{{ quantity > 1 ? 's' : '' }})</span>
                                <span class="font-semibold">{{ total|number_format(2, ',', ' ') }} €</span>
                            </div>
                            <div class="flex justify-between text-gray-700">
                                <span>Livraison</span>
                                <span class="font-semibold text-green-600">Gratuite</span>
                            </div>
                        </div>

                        <div class="flex justify-between text-2xl font-bold mb-8">
                            <span>Total</span>
                            <span class="text-primary text-3xl">{{ total|number_format(2, ',', ' ') }} €</span>
                        </div>

                        <button type="submit" class="btn-primary w-full text-lg py-4 glow">
                            <span class="flex items-center justify-center gap-3">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Valider la Commande
                            </span>
                        </button>

                        <p class="text-xs text-gray-500 mt-4 text-center">
                            En validant, vous acceptez nos conditions générales de vente
                        </p>

                        {# Sécurité #}
                        <div class="mt-8 pt-8 border-t space-y-3">
                            <div class="flex items-center gap-2 text-sm text-gray-600">
                                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                </svg>
                                Paiement 100% sécurisé
                            </div>
                            <div class="flex items-center gap-2 text-sm text-gray-600">
                                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                                </svg>
                                Données protégées
                            </div>
                        </div>
                    </div>
                </div>

            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
