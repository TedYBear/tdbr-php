{% extends 'base.html.twig' %}

{% block title %}Commande - TDBR{% endblock %}

{% block body %}
    {# Hero Section #}
    <section class="py-12 bg-gradient-to-br from-accent to-white">
        <div class="container mx-auto px-4">
            <div class="text-center">
                <h1 class="font-heading text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-black mb-4">
                    Finaliser votre <span class="gradient-text">Commande</span>
                </h1>
                <p class="text-lg text-gray-700">
                    Plus qu'une étape avant de recevoir vos créations uniques !
                </p>
            </div>

            {# Steps Indicator #}
            <div class="mt-8 md:mt-12 max-w-3xl mx-auto">
                <div class="flex items-center justify-between">
                    <div class="flex flex-col items-center flex-1">
                        <div class="w-9 h-9 md:w-12 md:h-12 bg-primary text-white rounded-full flex items-center justify-center font-bold text-sm md:text-lg shadow-lg">
                            ✓
                        </div>
                        <span class="mt-2 text-xs md:text-sm font-medium text-gray-700">Panier</span>
                    </div>
                    <div class="h-1 bg-primary flex-1 mx-2 md:mx-4"></div>
                    <div class="flex flex-col items-center flex-1">
                        <div class="w-9 h-9 md:w-12 md:h-12 bg-gradient-to-r from-primary to-secondary text-white rounded-full flex items-center justify-center font-bold text-sm md:text-lg shadow-lg glow">
                            2
                        </div>
                        <span class="mt-2 text-xs md:text-sm font-medium text-primary">Infos</span>
                    </div>
                    <div class="h-1 bg-gray-200 flex-1 mx-2 md:mx-4"></div>
                    <div class="flex flex-col items-center flex-1">
                        <div class="w-9 h-9 md:w-12 md:h-12 bg-gray-200 text-gray-400 rounded-full flex items-center justify-center font-bold text-sm md:text-lg">
                            3
                        </div>
                        <span class="mt-2 text-xs md:text-sm font-medium text-gray-400">Confirmation</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Checkout Content #}
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            {{ form_start(form, {'attr': {'class': 'grid lg:grid-cols-3 gap-12'}}) }}

                {# Formulaire #}
                <div class="lg:col-span-2 space-y-10">
                    {# Informations Client #}
                    <div class="card p-5 md:p-8">
                        <h2 class="font-heading text-3xl font-bold mb-6 flex items-center gap-3">
                            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            Vos Informations
                        </h2>

                        <div class="grid md:grid-cols-2 gap-6">
                            <div class="form-group">
                                {{ form_label(form.prenom) }}
                                {{ form_widget(form.prenom) }}
                                {{ form_errors(form.prenom) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.nom) }}
                                {{ form_widget(form.nom) }}
                                {{ form_errors(form.nom) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.telephone) }}
                                {{ form_widget(form.telephone) }}
                                {{ form_errors(form.telephone) }}
                            </div>
                        </div>
                    </div>

                    {# Adresse de Livraison #}
                    <div class="card p-5 md:p-8">
                        <h2 class="font-heading text-3xl font-bold mb-6 flex items-center gap-3">
                            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            Adresse de Livraison
                        </h2>

                        <div class="space-y-6">
                            <div class="form-group">
                                {{ form_label(form.adresse) }}
                                {{ form_widget(form.adresse) }}
                                {{ form_errors(form.adresse) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.complementAdresse) }}
                                {{ form_widget(form.complementAdresse) }}
                                {{ form_errors(form.complementAdresse) }}
                            </div>
                            <div class="grid md:grid-cols-3 gap-6">
                                <div class="form-group">
                                    {{ form_label(form.codePostal) }}
                                    {{ form_widget(form.codePostal) }}
                                    {{ form_errors(form.codePostal) }}
                                </div>
                                <div class="form-group md:col-span-2">
                                    {{ form_label(form.ville) }}
                                    {{ form_widget(form.ville) }}
                                    {{ form_errors(form.ville) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.pays) }}
                                {{ form_widget(form.pays) }}
                                {{ form_errors(form.pays) }}
                            </div>
                        </div>
                    </div>

                    {# Notes #}
                    <div class="card p-5 md:p-8">
                        <h2 class="font-heading text-3xl font-bold mb-6 flex items-center gap-3">
                            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            Notes (optionnel)
                        </h2>

                        <div class="form-group">
                            {{ form_widget(form.notes) }}
                            {{ form_errors(form.notes) }}
                        </div>
                    </div>

                    {# Paiement Stripe #}
                    <div class="card p-5 md:p-8">
                        <h2 class="font-heading text-3xl font-bold mb-6 flex items-center gap-3">
                            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                            </svg>
                            Paiement sécurisé
                        </h2>

                        {% if clientSecret %}
                            <div id="payment-element" class="mb-4 min-h-[120px]"></div>
                            <div id="payment-message" class="text-red-600 text-sm mt-2 hidden"></div>
                        {% else %}
                            <p class="text-red-600">Le service de paiement est temporairement indisponible. Veuillez réessayer.</p>
                        {% endif %}

                        <div class="flex items-center gap-2 mt-4 text-xs text-gray-500">
                            <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                            Paiement chiffré SSL — Propulsé par <strong class="ml-1">Stripe</strong>
                        </div>
                    </div>
                </div>

                {# Script Alpine pour le paiement Stripe — défini ici avant Alpine.start() #}
                <script>
                    function stripePayment() {
                        return {
                            loading: false,
                            async pay() {
                                const form = document.querySelector('form[name="checkout"]');
                                if (!form) return;

                                // Valider les champs du formulaire Symfony (HTML5)
                                if (!form.checkValidity()) {
                                    form.reportValidity();
                                    return;
                                }

                                this.loading = true;
                                const msgEl = document.getElementById('payment-message');
                                if (msgEl) { msgEl.classList.add('hidden'); msgEl.textContent = ''; }

                                if (!window._stripeInstance || !window._stripeElements) {
                                    if (msgEl) { msgEl.textContent = 'Service de paiement non initialisé.'; msgEl.classList.remove('hidden'); }
                                    this.loading = false;
                                    return;
                                }

                                const { error, paymentIntent } = await window._stripeInstance.confirmPayment({
                                    elements: window._stripeElements,
                                    confirmParams: {},
                                    redirect: 'if_required',
                                });

                                if (error) {
                                    if (msgEl) { msgEl.textContent = error.message; msgEl.classList.remove('hidden'); }
                                    this.loading = false;
                                    return;
                                }

                                if (paymentIntent && paymentIntent.status === 'succeeded') {
                                    const hiddenInput = document.getElementById('stripePaymentIntentId');
                                    if (hiddenInput) hiddenInput.value = paymentIntent.id;
                                    form.submit();
                                } else {
                                    if (msgEl) { msgEl.textContent = 'Le paiement n\'a pas abouti. Veuillez réessayer.'; msgEl.classList.remove('hidden'); }
                                    this.loading = false;
                                }
                            }
                        };
                    }
                </script>

                {# Récapitulatif Commande #}
                <div class="lg:col-span-1">
                    <div class="card p-8 sticky top-24">
                        <h2 class="font-heading text-2xl font-bold mb-6">Récapitulatif</h2>

                        {# Articles #}
                        <div class="space-y-4 mb-6 pb-6 border-b max-h-96 overflow-y-auto">
                            {% for itemId, item in cartItems %}
                                <div class="flex gap-4">
                                    <div class="w-16 h-16 bg-gray-100 rounded-lg overflow-hidden flex-shrink-0">
                                        {% if item.article.image %}
                                            <img src="{{ item.article.image }}" alt="{{ item.article.nom }}" class="w-full h-full object-contain">
                                        {% endif %}
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <h4 class="font-semibold text-sm truncate">{{ item.article.nom }}</h4>
                                        {% if item.choices is defined and item.choices|length > 0 %}
                                            <div class="flex flex-wrap gap-1 mt-1">
                                                {% for key, val in item.choices %}
                                                    <span class="text-xs text-gray-600">{{ key }}: {{ val }}</span>
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                        <p class="text-sm text-gray-900 mt-1">
                                            <span class="font-bold">{{ item.quantity }}x</span>
                                            <span class="ml-2">{{ (item.article.prix ?? item.article.prixBase ?? 0)|number_format(2, ',', ' ') }} €</span>
                                        </p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                        {# Totaux #}
                        <div class="space-y-3 mb-6 pb-6 border-b">
                            <div class="flex justify-between text-gray-700">
                                <span>Sous-total ({{ quantity }} article{{ quantity > 1 ? 's' : '' }})</span>
                                <span class="font-semibold">{{ total|number_format(2, ',', ' ') }} €</span>
                            </div>
                            <div class="flex justify-between text-gray-700">
                                <span>Livraison</span>
                                <span class="font-semibold text-green-600">Gratuite</span>
                            </div>
                        </div>

                        <div class="flex justify-between text-2xl font-bold mb-8">
                            <span>Total</span>
                            <span class="text-primary text-3xl">{{ total|number_format(2, ',', ' ') }} €</span>
                        </div>

                        {% if clientSecret %}
                            <button type="button"
                                    x-data="stripePayment()"
                                    x-on:click="pay()"
                                    :disabled="loading"
                                    class="w-full text-lg py-4 btn-primary rounded-xl font-semibold disabled:opacity-50 disabled:cursor-not-allowed transition">
                                <span x-show="!loading">Payer {{ total|number_format(2, ',', ' ') }} €</span>
                                <span x-show="loading" style="display:none;">Paiement en cours…</span>
                            </button>
                        {% else %}
                            <button type="button" disabled
                                    class="w-full text-lg py-4 bg-gray-200 text-gray-400 rounded-xl cursor-not-allowed font-semibold">
                                Service indisponible
                            </button>
                        {% endif %}

                        {# Sécurité #}
                        <div class="mt-8 pt-8 border-t space-y-3">
                            <div class="flex items-center gap-2 text-sm text-gray-600">
                                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                </svg>
                                Paiement 100% sécurisé
                            </div>
                            <div class="flex items-center gap-2 text-sm text-gray-600">
                                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                                </svg>
                                Données protégées
                            </div>
                        </div>
                    </div>
                </div>

                <input type="hidden" name="stripePaymentIntentId" id="stripePaymentIntentId" value="">
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if clientSecret %}
        <script src="https://js.stripe.com/v3/"></script>
        <script>
        (function() {
            const pk = {{ stripePublicKey|json_encode|raw }};
            const cs = {{ clientSecret|json_encode|raw }};
            if (!pk || !cs) return;

            window._stripeInstance = Stripe(pk);
            window._stripeElements = window._stripeInstance.elements({ clientSecret: cs });

            const paymentElement = window._stripeElements.create('payment', {
                layout: 'tabs'
            });
            paymentElement.mount('#payment-element');
        })();
        </script>
    {% endif %}
{% endblock %}
