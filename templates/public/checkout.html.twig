{% extends 'base.html.twig' %}

{% block title %}Commande - TDBR{% endblock %}

{% block body %}
    {# Hero Section #}
    <section class="py-12 bg-gradient-to-br from-accent to-white">
        <div class="container mx-auto px-4">
            <div class="text-center">
                <h1 class="font-heading text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-black mb-4">
                    Finaliser votre <span class="gradient-text">Commande</span>
                </h1>
                <p class="text-lg text-gray-700">
                    Plus qu'une étape avant de recevoir vos créations uniques !
                </p>
            </div>

            {# Steps Indicator #}
            <div class="mt-8 md:mt-12 max-w-3xl mx-auto">
                <div class="flex items-center justify-between">
                    <div class="flex flex-col items-center flex-1">
                        <div class="w-9 h-9 md:w-12 md:h-12 bg-primary text-white rounded-full flex items-center justify-center font-bold text-sm md:text-lg shadow-lg">
                            ✓
                        </div>
                        <span class="mt-2 text-xs md:text-sm font-medium text-gray-700">Panier</span>
                    </div>
                    <div class="h-1 bg-primary flex-1 mx-2 md:mx-4"></div>
                    <div class="flex flex-col items-center flex-1">
                        <div class="w-9 h-9 md:w-12 md:h-12 bg-gradient-to-r from-primary to-secondary text-white rounded-full flex items-center justify-center font-bold text-sm md:text-lg shadow-lg glow">
                            2
                        </div>
                        <span class="mt-2 text-xs md:text-sm font-medium text-primary">Infos</span>
                    </div>
                    <div class="h-1 bg-gray-200 flex-1 mx-2 md:mx-4"></div>
                    <div class="flex flex-col items-center flex-1">
                        <div class="w-9 h-9 md:w-12 md:h-12 bg-gray-200 text-gray-400 rounded-full flex items-center justify-center font-bold text-sm md:text-lg">
                            3
                        </div>
                        <span class="mt-2 text-xs md:text-sm font-medium text-gray-400">Confirmation</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Script Alpine — défini avant Alpine.start() #}
    <script>
    function checkoutApp() {
        return {
            mode: 'domicile',
            pointRelais: {{ pointsRelais|keys|first|default('')|json_encode|raw }},
            fraisLivraison: {{ fraisParMode.domicile }},
            cartTotal: {{ total }},
            piId: {{ paymentIntentId|default('')|json_encode|raw }},

            get grandTotal() {
                return this.cartTotal + this.fraisLivraison;
            },

            formatPrice(val) {
                return val.toFixed(2).replace('.', ',') + '\u00a0€';
            },

            async selectMode(m) {
                this.mode = m;
                try {
                    const resp = await fetch('/checkout/update-livraison', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ paymentIntentId: this.piId, modeLivraison: m })
                    });
                    if (resp.ok) {
                        const data = await resp.json();
                        this.fraisLivraison = data.fraisLivraison;
                    }
                } catch (e) {}
            },

            loading: false,

            async pay() {
                const form = document.querySelector('form[name="checkout"]');
                if (!form) return;
                if (!form.checkValidity()) {
                    form.reportValidity();
                    return;
                }
                this.loading = true;
                const msgEl = document.getElementById('payment-message');
                if (msgEl) { msgEl.classList.add('hidden'); msgEl.textContent = ''; }

                if (!window._stripeInstance || !window._stripeElements) {
                    if (msgEl) { msgEl.textContent = 'Service de paiement non initialisé.'; msgEl.classList.remove('hidden'); }
                    this.loading = false;
                    return;
                }

                const { error, paymentIntent } = await window._stripeInstance.confirmPayment({
                    elements: window._stripeElements,
                    confirmParams: {},
                    redirect: 'if_required',
                });

                if (error) {
                    if (msgEl) { msgEl.textContent = error.message; msgEl.classList.remove('hidden'); }
                    this.loading = false;
                    return;
                }

                if (paymentIntent && paymentIntent.status === 'succeeded') {
                    document.getElementById('stripePaymentIntentId').value = paymentIntent.id;
                    form.submit();
                } else {
                    if (msgEl) { msgEl.textContent = 'Le paiement n\'a pas abouti. Veuillez réessayer.'; msgEl.classList.remove('hidden'); }
                    this.loading = false;
                }
            }
        };
    }
    </script>

    {# Checkout Content #}
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            {{ form_start(form, {'attr': {'class': 'grid lg:grid-cols-3 gap-12', 'x-data': 'checkoutApp()'}}) }}

                {# Formulaire #}
                <div class="lg:col-span-2 space-y-10">
                    {# Informations Client #}
                    <div class="card p-5 md:p-8">
                        <h2 class="font-heading text-3xl font-bold mb-6 flex items-center gap-3">
                            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            Vos Informations
                        </h2>

                        <div class="grid md:grid-cols-2 gap-6">
                            <div class="form-group">
                                {{ form_label(form.prenom) }}
                                {{ form_widget(form.prenom) }}
                                {{ form_errors(form.prenom) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.nom) }}
                                {{ form_widget(form.nom) }}
                                {{ form_errors(form.nom) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.telephone) }}
                                {{ form_widget(form.telephone) }}
                                {{ form_errors(form.telephone) }}
                            </div>
                        </div>
                    </div>

                    {# Mode de Livraison #}
                    <div class="card p-5 md:p-8">
                        <h2 class="font-heading text-3xl font-bold mb-6 flex items-center gap-3">
                            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                            </svg>
                            Mode de Livraison
                        </h2>

                        <div class="space-y-3">
                            {% for modeId, option in livraisonOptions %}
                                <div class="flex items-start gap-4 p-4 rounded-xl border-2 cursor-pointer transition-all"
                                     :class="mode === '{{ modeId }}' ? 'border-primary bg-accent/30' : 'border-gray-200 hover:border-gray-300'"
                                     @click="selectMode('{{ modeId }}')">
                                    <div class="mt-0.5 flex-shrink-0 w-5 h-5 rounded-full border-2 flex items-center justify-center transition-colors"
                                         :class="mode === '{{ modeId }}' ? 'border-primary' : 'border-gray-300'">
                                        <div class="w-2.5 h-2.5 rounded-full bg-primary"
                                             x-show="mode === '{{ modeId }}'"></div>
                                    </div>
                                    <div class="flex-1">
                                        <div class="flex justify-between items-start gap-2">
                                            <span class="font-semibold text-gray-900">{{ option.label }}</span>
                                            <span class="font-bold text-primary whitespace-nowrap flex-shrink-0">
                                                {{ fraisParMode[modeId] == 0 ? 'Gratuite' : fraisParMode[modeId]|number_format(2, ',', ' ') ~ ' €' }}
                                            </span>
                                        </div>
                                        <p class="text-sm text-gray-600 mt-1">{{ option.description }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                        <input type="hidden" name="modeLivraison" :value="mode">

                        {# Sélecteur point relais #}
                        <div x-show="mode === 'relais'" style="display:none;" class="mt-6">
                            <label class="block text-sm font-medium text-gray-700 mb-1">Point relais</label>
                            <select name="pointRelaisId" x-model="pointRelais" class="form-select w-full">
                                {% for relaisId, relais in pointsRelais %}
                                    <option value="{{ relaisId }}">{{ relais.nom }} — {{ relais.adresse }}, {{ relais.codePostal }} {{ relais.ville }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    {# Adresse de Livraison (cachée pour le mode relais) #}
                    <div x-show="mode !== 'relais'" class="card p-5 md:p-8">
                        <h2 class="font-heading text-3xl font-bold mb-6 flex items-center gap-3">
                            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            Adresse de Livraison
                        </h2>

                        <div class="space-y-6">
                            <div class="form-group">
                                <label class="block text-sm font-medium text-gray-700 mb-1">Adresse</label>
                                <input type="text" name="adresse" class="form-input"
                                       placeholder="Numéro et nom de rue"
                                       :required="mode !== 'relais'" :disabled="mode === 'relais'">
                            </div>
                            <div class="form-group">
                                <label class="block text-sm font-medium text-gray-700 mb-1">Complément d'adresse</label>
                                <input type="text" name="complementAdresse" class="form-input"
                                       placeholder="Appartement, étage, etc. (optionnel)">
                            </div>
                            <div class="grid md:grid-cols-3 gap-6">
                                <div class="form-group">
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Code postal</label>
                                    <input type="text" name="codePostal" class="form-input"
                                           placeholder="75001" pattern="[0-9]{5}"
                                           :required="mode !== 'relais'" :disabled="mode === 'relais'">
                                </div>
                                <div class="form-group md:col-span-2">
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Ville</label>
                                    <input type="text" name="ville" class="form-input"
                                           placeholder="Paris"
                                           :required="mode !== 'relais'" :disabled="mode === 'relais'">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="block text-sm font-medium text-gray-700 mb-1">Pays</label>
                                <select name="pays" class="form-select"
                                        :required="mode !== 'relais'" :disabled="mode === 'relais'">
                                    <option value="FR">France</option>
                                    <option value="BE">Belgique</option>
                                    <option value="CH">Suisse</option>
                                    <option value="LU">Luxembourg</option>
                                    <option value="CA">Canada</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    {# Notes #}
                    <div class="card p-5 md:p-8">
                        <h2 class="font-heading text-3xl font-bold mb-6 flex items-center gap-3">
                            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            Notes (optionnel)
                        </h2>

                        <div class="form-group">
                            {{ form_widget(form.notes) }}
                            {{ form_errors(form.notes) }}
                        </div>
                    </div>

                    {# Paiement Stripe #}
                    <div class="card p-5 md:p-8">
                        <h2 class="font-heading text-3xl font-bold mb-6 flex items-center gap-3">
                            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                            </svg>
                            Paiement sécurisé
                        </h2>

                        <div class="p-4 bg-amber-50 rounded-lg border border-amber-200">
                            <p class="text-sm font-semibold text-amber-800">Le paiement en ligne sera disponible très prochainement.</p>
                            <p class="text-sm text-amber-700 mt-1">
                                En attendant, <a href="{{ path('contact') }}" class="underline font-medium">contactez-nous</a> pour passer commande dès maintenant.
                            </p>
                        </div>
                    </div>
                </div>

                {# Récapitulatif Commande #}
                <div class="lg:col-span-1">
                    <div class="card p-8 sticky top-24">
                        <h2 class="font-heading text-2xl font-bold mb-6">Récapitulatif</h2>

                        {# Articles #}
                        <div class="space-y-4 mb-6 pb-6 border-b max-h-96 overflow-y-auto">
                            {% for itemId, item in cartItems %}
                                <div class="flex gap-4">
                                    <div class="w-16 h-16 bg-gray-100 rounded-lg overflow-hidden flex-shrink-0">
                                        {% if item.article.image %}
                                            <img src="{{ item.article.image }}" alt="{{ item.article.nom }}" class="w-full h-full object-contain">
                                        {% endif %}
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <h4 class="font-semibold text-sm truncate">{{ item.article.nom }}</h4>
                                        {% if item.choices is defined and item.choices|length > 0 %}
                                            <div class="flex flex-wrap gap-1 mt-1">
                                                {% for key, val in item.choices %}
                                                    <span class="text-xs text-gray-600">{{ key }}: {{ val }}</span>
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                        <p class="text-sm text-gray-900 mt-1">
                                            <span class="font-bold">{{ item.quantity }}x</span>
                                            <span class="ml-2">{{ (item.article.prix ?? item.article.prixBase ?? 0)|number_format(2, ',', ' ') }} €</span>
                                        </p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                        {# Totaux #}
                        <div class="space-y-3 mb-6 pb-6 border-b">
                            <div class="flex justify-between text-gray-700">
                                <span>Sous-total ({{ quantity }} article{{ quantity > 1 ? 's' : '' }})</span>
                                <span class="font-semibold">{{ total|number_format(2, ',', ' ') }} €</span>
                            </div>
                            <div class="flex justify-between text-gray-700">
                                <span>Livraison</span>
                                <span class="font-semibold text-green-600"
                                      x-text="fraisLivraison === 0 ? 'Gratuite' : formatPrice(fraisLivraison)">Gratuite</span>
                            </div>
                        </div>

                        <div class="flex justify-between text-2xl font-bold mb-8">
                            <span>Total</span>
                            <span class="text-primary text-3xl"
                                  x-text="formatPrice(grandTotal)">{{ total|number_format(2, ',', ' ') }} €</span>
                        </div>

                        <button type="button" disabled
                                class="w-full text-lg py-4 bg-gray-200 text-gray-400 rounded-xl cursor-not-allowed font-semibold">
                            Paiement bientôt disponible
                        </button>

                        {# Sécurité #}
                        <div class="mt-8 pt-8 border-t space-y-3">
                            <div class="flex items-center gap-2 text-sm text-gray-600">
                                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                </svg>
                                Paiement 100% sécurisé
                            </div>
                            <div class="flex items-center gap-2 text-sm text-gray-600">
                                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                                </svg>
                                Données protégées
                            </div>
                        </div>
                    </div>
                </div>

                <input type="hidden" name="stripePaymentIntentId" id="stripePaymentIntentId" value="">
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if clientSecret %}
        <script src="https://js.stripe.com/v3/"></script>
        <script>
        (function() {
            const pk = {{ stripePublicKey|json_encode|raw }};
            const cs = {{ clientSecret|json_encode|raw }};
            if (!pk || !cs) return;

            window._stripeInstance = Stripe(pk);
            window._stripeElements = window._stripeInstance.elements({ clientSecret: cs });

            const paymentElement = window._stripeElements.create('payment', {
                layout: 'tabs'
            });
            paymentElement.mount('#payment-element');
        })();
        </script>
    {% endif %}
{% endblock %}
