{# Composant Badge Statut - Usage: {% include 'components/badge_status.html.twig' with {statut: 'en_attente'} %} #}

{% set classes = {
    'en_attente': 'bg-yellow-100 text-yellow-800',
    'validee': 'bg-blue-100 text-blue-800',
    'en_cours': 'bg-purple-100 text-purple-800',
    'expediee': 'bg-green-100 text-green-800',
    'livree': 'bg-green-100 text-green-800',
    'annulee': 'bg-red-100 text-red-800'
} %}

{% set labels = {
    'en_attente': 'En attente',
    'validee': 'Validée',
    'en_cours': 'En cours',
    'expediee': 'Expédiée',
    'livree': 'Livrée',
    'annulee': 'Annulée'
} %}

<span class="px-3 py-1 rounded-full text-xs font-semibold {{ classes[statut] ?? 'bg-gray-100 text-gray-800' }}">
    {{ labels[statut] ?? statut }}
</span>
