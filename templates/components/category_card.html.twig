{# Category Card Component #}
{% set category = category|default(null) %}
{% if category %}
<a href="{{ path('categorie', {slug: category.slug}) }}" class="card card-hover block">
    {# Image #}
    <div class="relative h-48 bg-gradient-to-br from-accent/20 to-white overflow-hidden">
        {% if category.image is defined and category.image %}
            <img src="{{ category.image }}"
                 alt="{{ category.nom }}"
                 class="w-full h-full object-cover transition-transform duration-300 hover:scale-110">
        {% else %}
            <div class="w-full h-full flex items-center justify-center">
                {% if category.icon is defined %}
                    <span class="text-6xl">{{ category.icon }}</span>
                {% else %}
                    <svg class="w-20 h-20 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
                    </svg>
                {% endif %}
            </div>
        {% endif %}
    </div>

    {# Contenu #}
    <div class="p-6">
        <h3 class="font-heading text-xl font-bold text-dark mb-2">
            {{ category.nom }}
        </h3>

        {% if category.description is defined %}
            <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                {{ category.description|striptags|slice(0, 100) }}
            </p>
        {% endif %}

        <div class="flex items-center justify-between">
            <span class="text-sm text-gray-500">
                {{ category.articleCount ?? 0 }} article{{ (category.articleCount ?? 0) > 1 ? 's' : '' }}
            </span>
            <span class="text-primary font-semibold flex items-center gap-2">
                DÃ©couvrir
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </span>
        </div>
    </div>
</a>
{% endif %}
