{% extends 'emails/base.html.twig' %}

{% block header_title %}Nouveau Message Contact{% endblock %}

{% block content %}
    <h2 style="color: #2C2416; margin-top: 0;">Nouveau message de contact</h2>

    <div style="background-color: #F5E6D3; padding: 20px; border-radius: 8px; margin: 20px 0;">
        <p style="margin: 0 0 10px 0;"><strong>De :</strong> {{ message.nom }}</p>
        <p style="margin: 0 0 10px 0;"><strong>Email :</strong> <a href="mailto:{{ message.email }}" style="color: #8B7355;">{{ message.email }}</a></p>
        <p style="margin: 0 0 10px 0;"><strong>Sujet :</strong> {{ message.sujet }}</p>
        <p style="margin: 0;"><strong>Date :</strong> {{ message.createdAt.toDateTime().format('d/m/Y Ã  H:i') }}</p>
    </div>

    <h3 style="color: #8B7355;">Message :</h3>
    <div style="background-color: #f9f9f9; padding: 20px; border-left: 4px solid #8B7355; border-radius: 4px;">
        <p style="white-space: pre-line; margin: 0;">{{ message.message }}</p>
    </div>

    <div style="text-align: center; margin: 30px 0;">
        <a href="http://localhost:8000/admin/messages" class="button">
            Voir dans l'admin
        </a>
    </div>
{% endblock %}

{% block footer %}
    <p>
        <strong>TDBR</strong> - Administration<br>
        Notification automatique
    </p>
{% endblock %}
