{% extends 'base.html.twig' %}

{% block title %}Connexion - TDBR{% endblock %}

{% block body %}
    <section class="min-h-screen py-20 bg-gradient-to-br from-accent/20 via-white to-primary/5 flex items-center">
        <div class="container mx-auto px-4">
            <div class="max-w-md mx-auto">
                {# Card de connexion #}
                <div class="card p-10 shadow-2xl">
                    {# Logo/Titre #}
                    <div class="text-center mb-8">
                        <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-primary to-secondary rounded-full mb-4 shadow-lg glow">
                            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                        </div>
                        <h1 class="font-heading text-4xl font-black mb-2">
                            <span class="gradient-text">Connexion</span>
                        </h1>
                        <p class="text-gray-600">Bon retour parmi nous !</p>
                    </div>

                    {# Messages d'erreur #}
                    {% if error %}
                        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-xl">
                            <div class="flex items-start gap-3">
                                <svg class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <p class="text-sm text-red-800">
                                    <strong>Erreur de connexion :</strong>
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </p>
                            </div>
                        </div>
                    {% endif %}

                    {# Formulaire #}
                    {{ form_start(form, {'action': path('connexion'), 'attr': {'class': 'space-y-6'}}) }}

                        <div class="form-group">
                            {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-input'}, 'value': last_username}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.password, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                            <div class="relative">
                                {{ form_widget(form.password, {'attr': {'class': 'form-input pr-12'}}) }}
                                <button type="button"
                                        onclick="togglePassword(this)"
                                        class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 transition-colors"
                                        aria-label="Afficher/masquer le mot de passe">
                                    <svg id="eye-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                    <svg id="eye-off-icon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                                    </svg>
                                </button>
                            </div>
                            {{ form_errors(form.password) }}
                        </div>

                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-2">
                                {{ form_widget(form.remember_me, {'attr': {'class': 'w-4 h-4 text-primary border-gray-300 rounded focus:ring-2 focus:ring-primary/20'}}) }}
                                {{ form_label(form.remember_me, null, {'label_attr': {'class': 'text-sm text-gray-700 cursor-pointer'}}) }}
                            </div>
                            <a href="#" class="text-sm text-primary hover:text-secondary font-medium">
                                Mot de passe oublié ?
                            </a>
                        </div>

                        <button type="submit" class="btn-primary w-full py-4 text-lg glow">
                            <span class="flex items-center justify-center gap-3">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                                </svg>
                                Se Connecter
                            </span>
                        </button>

                    {{ form_end(form) }}

                    {# Lien inscription #}
                    <div class="mt-8 pt-8 border-t text-center">
                        <p class="text-gray-600">
                            Pas encore de compte ?
                            <a href="{{ path('inscription') }}" class="text-primary hover:text-secondary font-semibold ml-1">
                                Créer un compte
                            </a>
                        </p>
                    </div>
                </div>

                {# Retour accueil #}
                <div class="text-center mt-8">
                    <a href="{{ path('home') }}" class="inline-flex items-center gap-2 text-gray-600 hover:text-primary transition">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Retour à l'accueil
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function togglePassword(btn) {
            const field = btn.closest('.relative').querySelector('input');
            const eyeIcon = btn.querySelector('#eye-icon');
            const eyeOffIcon = btn.querySelector('#eye-off-icon');
            if (field.type === 'password') {
                field.type = 'text';
                eyeIcon.classList.add('hidden');
                eyeOffIcon.classList.remove('hidden');
            } else {
                field.type = 'password';
                eyeIcon.classList.remove('hidden');
                eyeOffIcon.classList.add('hidden');
            }
        }
    </script>
{% endblock %}
