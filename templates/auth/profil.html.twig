{% extends 'base.html.twig' %}

{% block title %}Mon Profil - TDBR{% endblock %}

{% block body %}
    {# Hero Section #}
    <section class="py-16 bg-gradient-to-br from-primary/10 to-secondary/10">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center">
                <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-br from-primary to-secondary rounded-full mb-6 shadow-xl glow">
                    <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                </div>
                <h1 class="font-heading text-5xl font-black mb-4">
                    Bonjour <span class="gradient-text">{{ user.prenom }}</span> !
                </h1>
                <p class="text-xl text-gray-700">
                    G√©rez votre compte et consultez vos commandes
                </p>
            </div>
        </div>
    </section>

    {# Contenu Principal #}
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <div class="max-w-6xl mx-auto grid lg:grid-cols-3 gap-12">
                {# Informations Utilisateur #}
                <div class="lg:col-span-1 space-y-6">
                    <div class="card p-8">
                        <h2 class="font-heading text-2xl font-bold mb-6 flex items-center gap-3">
                            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            Mes Informations
                        </h2>

                        <form method="post" action="{{ path('profil') }}" class="space-y-4">
                            <div class="form-group">
                                <label class="block text-sm text-gray-500 mb-1">Pr√©nom</label>
                                <input type="text" name="prenom" value="{{ user.prenom }}" class="form-input">
                            </div>

                            <div class="form-group">
                                <label class="block text-sm text-gray-500 mb-1">Nom</label>
                                <input type="text" name="nom" value="{{ user.nom }}" class="form-input">
                            </div>

                            <div class="form-group">
                                <label class="block text-sm text-gray-500 mb-1">Email *</label>
                                <input type="email" name="email" value="{{ user.email }}" required class="form-input">
                            </div>

                            <div class="form-group">
                                <label class="block text-sm text-gray-500 mb-1">T√©l√©phone</label>
                                <input type="tel" name="telephone" value="{{ user.telephone }}" class="form-input">
                            </div>

                            <div class="pb-4 border-b">
                                <div class="text-sm text-gray-500 mb-1">R√¥le</div>
                                <div class="inline-flex items-center gap-2 px-3 py-1 bg-primary/10 text-primary rounded-full text-sm font-semibold">
                                    {% if 'ROLE_ADMIN' in user.roles %}
                                        Administrateur
                                    {% else %}
                                        Utilisateur
                                    {% endif %}
                                </div>
                            </div>

                            <button type="submit" class="btn-primary w-full">Enregistrer</button>
                        </form>

                        {# Actions #}
                        <div class="mt-8 pt-8 border-t space-y-3">
                            {% if 'ROLE_ADMIN' in user.roles %}
                                <a href="{{ path('admin_dashboard') }}" class="btn-primary w-full text-center">
                                    <span class="flex items-center justify-center gap-2">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        </svg>
                                        Administration
                                    </span>
                                </a>
                            {% endif %}
                            <a href="{{ path('logout') }}" class="btn-outline w-full text-center">
                                <span class="flex items-center justify-center gap-2">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                    </svg>
                                    Se d√©connecter
                                </span>
                            </a>
                        </div>
                    </div>

                    {# Codes de R√©duction #}
                    {% if codesReduction|length > 0 %}
                    <div class="card p-8">
                        <h2 class="font-heading text-2xl font-bold mb-6 flex items-center gap-3">
                            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                            </svg>
                            Mes R√©ductions
                        </h2>

                        <div class="space-y-3">
                            {% for code in codesReduction %}
                                {% set actif = code.isActif %}
                                <div class="rounded-xl border-2 p-4 {{ actif ? 'border-green-200 bg-green-50' : 'border-gray-100 bg-gray-50 opacity-60' }}">
                                    <div class="flex items-center justify-between mb-1">
                                        <span class="font-mono font-bold text-lg {{ actif ? 'text-gray-900' : 'text-gray-400' }}">{{ code.code }}</span>
                                        <span class="font-bold text-xl {{ actif ? 'text-green-600' : 'text-gray-400' }}">- {{ code.montant|number_format(2, ',', ' ') }} ‚Ç¨</span>
                                    </div>
                                    <div class="flex items-center justify-between text-xs text-gray-500">
                                        <span class="px-2 py-0.5 rounded-full font-semibold
                                            {{ actif ? 'bg-green-100 text-green-700' : (code.statut == 'utilise' ? 'bg-gray-200 text-gray-500' : 'bg-orange-100 text-orange-600') }}">
                                            {% if actif %}Disponible
                                            {% elseif code.statut == 'utilise' %}Utilis√©
                                            {% else %}Expir√©{% endif %}
                                        </span>
                                        {% if code.dateExpiration and actif %}
                                            <span>Expire le {{ code.dateExpiration|date('d/m/Y') }}</span>
                                        {% elseif code.commande %}
                                            <span>Utilis√© ‚Äî {{ code.commande.numero }}</span>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    {% endif %}
                </div>

                {# Historique Commandes #}
                <div class="lg:col-span-2">
                    <div class="card p-8">
                        <h2 class="font-heading text-3xl font-bold mb-6 flex items-center gap-3">
                            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                            </svg>
                            Mes Commandes
                        </h2>

                        {% if commandes|length > 0 %}
                            <div class="space-y-4">
                                {% for commande in commandes %}
                                    <div class="border-2 border-gray-100 rounded-xl p-6 hover:border-primary/30 transition-all">
                                        <div class="flex items-start justify-between mb-4">
                                            <div>
                                                <div class="font-heading text-xl font-bold text-primary mb-1">
                                                    {{ commande.numero }}
                                                </div>
                                                <div class="text-sm text-gray-600">
                                                    {{ commande.createdAt|date('d/m/Y √† H:i') }}
                                                </div>
                                            </div>
                                            <div class="text-right">
                                                <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-semibold
                                                    {% if commande.statut == 'en_attente' %}
                                                        bg-yellow-100 text-yellow-800
                                                    {% elseif commande.statut == 'validee' %}
                                                        bg-blue-100 text-blue-800
                                                    {% elseif commande.statut == 'en_cours' %}
                                                        bg-purple-100 text-purple-800
                                                    {% elseif commande.statut == 'expediee' %}
                                                        bg-green-100 text-green-800
                                                    {% elseif commande.statut == 'livree' %}
                                                        bg-green-100 text-green-800
                                                    {% elseif commande.statut == 'annulee' %}
                                                        bg-red-100 text-red-800
                                                    {% endif %}">
                                                    {% if commande.statut == 'en_attente' %}
                                                        ‚è≥ En attente
                                                    {% elseif commande.statut == 'validee' %}
                                                        ‚úì Valid√©e
                                                    {% elseif commande.statut == 'en_cours' %}
                                                        üî® En cours
                                                    {% elseif commande.statut == 'expediee' %}
                                                        üì¶ Exp√©di√©e
                                                    {% elseif commande.statut == 'livree' %}
                                                        ‚úì Livr√©e
                                                    {% elseif commande.statut == 'annulee' %}
                                                        ‚úó Annul√©e
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>

                                        {# Articles #}
                                        <div class="space-y-2 mb-4">
                                            {% for article in commande.articles|slice(0, 3) %}
                                                <div class="flex items-center gap-3 text-sm">
                                                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                                                    </svg>
                                                    <span class="text-gray-700">{{ article.nom }}</span>
                                                    <span class="text-gray-500">√ó{{ article.quantity }}</span>
                                                </div>
                                            {% endfor %}
                                            {% if commande.articles|length > 3 %}
                                                <div class="text-sm text-gray-500 ml-7">
                                                    + {{ commande.articles|length - 3 }} autre(s) article(s)
                                                </div>
                                            {% endif %}
                                        </div>

                                        <div class="flex items-center justify-between pt-4 border-t">
                                            <div>
                                                <span class="text-sm text-gray-600">Total :</span>
                                                <span class="text-2xl font-bold text-primary ml-2">
                                                    {{ commande.total|number_format(2, ',', ' ') }} ‚Ç¨
                                                </span>
                                            </div>
                                            <a href="{{ path('confirmation', {id: commande.id}) }}"
                                               class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-primary hover:text-white rounded-lg transition font-medium text-sm">
                                                Voir d√©tails
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                                </svg>
                                            </a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="text-center py-16">
                                <div class="inline-flex items-center justify-center w-24 h-24 bg-gray-100 rounded-full mb-6">
                                    <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                                    </svg>
                                </div>
                                <h3 class="font-heading text-2xl font-bold mb-4">Aucune commande</h3>
                                <p class="text-gray-600 mb-8 max-w-md mx-auto">
                                    Vous n'avez pas encore pass√© de commande. D√©couvrez nos cr√©ations uniques !
                                </p>
                                <a href="{{ path('catalogue') }}" class="btn-primary inline-flex items-center gap-3">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                                    </svg>
                                    D√©couvrir le Catalogue
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
