{# Navbar Component #}
<nav class="bg-white shadow-md sticky top-0 z-50" x-data="{ mobileOpen: false }">
    <div class="container mx-auto px-4 py-3 md:py-4">
        <div class="flex items-center justify-between">
            {# Logo #}
            <a href="{{ path('home') }}" class="flex items-center space-x-2">
                <img src="{{ asset('build/images/TDBR.png') }}" alt="TDBR Logo" class="h-10 md:h-12 w-auto">
                <span class="font-heading text-xl md:text-2xl font-bold gradient-text">TDBR</span>
            </a>

            {# Menu Desktop #}
            <div class="hidden md:flex items-center space-x-6">
                <a href="{{ path('home') }}" class="hover:text-primary transition">Accueil</a>
                <a href="{{ path('catalogue', {}) }}" class="hover:text-primary transition">Catalogue</a>

                {# Dropdown Catégories #}
                <div class="relative" x-data="{ open: false }">
                    <button @click="open = !open" @click.away="open = false" class="hover:text-primary transition flex items-center">
                        Catégories
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    <div x-show="open" x-transition class="absolute left-0 mt-2 w-48 bg-white shadow-lg rounded-lg py-2">
                        {% set categories = app.request.attributes.get('_categories') %}
                        {% if categories %}
                            {% for category in categories %}
                                <a href="{{ path('categorie', {slug: category.slug}) }}" class="block px-4 py-2 hover:bg-gray-100">
                                    {{ category.nom }}
                                </a>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>

                <a href="{{ path('devis') }}" class="btn-primary text-sm">Demander un devis</a>
                <a href="{{ path('contact', {}) }}" class="hover:text-primary transition">Contact</a>
                <a href="{{ path('presentation') }}" class="hover:text-primary transition">À propos</a>
            </div>

            {# Actions + Mobile Button #}
            <div class="flex items-center space-x-3">
                {# Panier #}
                <a href="{{ path('panier', {}) }}" class="relative hover:text-primary transition p-1">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    {% set cartCount = app.request.attributes.get('_cart_count', 0) %}
                    <span data-cart-count class="absolute -top-1 -right-1 bg-secondary text-white text-xs rounded-full w-5 h-5 flex items-center justify-center {{ cartCount > 0 ? '' : 'hidden' }}">
                        {{ cartCount }}
                    </span>
                </a>

                {# User Menu (desktop) #}
                {% if app.user %}
                    <div class="relative hidden md:block" x-data="{ open: false }">
                        <button @click="open = !open" @click.away="open = false" class="flex items-center gap-2 hover:text-primary transition">
                            <div class="w-9 h-9 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center text-white text-sm font-bold flex-shrink-0">
                                {{ app.user.prenom|first }}{{ app.user.nom|first }}
                            </div>
                        </button>
                        <div x-show="open" x-transition class="absolute right-0 mt-2 w-48 bg-white shadow-lg rounded-lg py-2">
                            <a href="{{ path('profil', {}) }}" class="block px-4 py-2 hover:bg-gray-100">Mon profil</a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('admin_dashboard', {}) }}" class="block px-4 py-2 hover:bg-gray-100">Administration</a>
                            {% endif %}
                            <a href="{{ path('logout', {}) }}" class="block px-4 py-2 hover:bg-gray-100 text-red-600">Déconnexion</a>
                        </div>
                    </div>
                {% else %}
                    <div class="hidden md:flex items-center space-x-3">
                        <a href="{{ path('connexion', {}) }}" class="hover:text-primary transition text-sm">Connexion</a>
                        <a href="{{ path('inscription', {}) }}" class="btn-primary text-sm">S'inscrire</a>
                    </div>
                {% endif %}

                {# Mobile Menu Button #}
                <button class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition" @click="mobileOpen = !mobileOpen" aria-label="Menu">
                    <svg x-show="!mobileOpen" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                    <svg x-show="mobileOpen" x-cloak class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    {# Mobile Menu Drawer #}
    <div x-show="mobileOpen"
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 -translate-y-2"
         x-transition:enter-end="opacity-100 translate-y-0"
         x-transition:leave="transition ease-in duration-150"
         x-transition:leave-start="opacity-100 translate-y-0"
         x-transition:leave-end="opacity-0 -translate-y-2"
         x-cloak
         class="md:hidden bg-white border-t border-gray-100 shadow-lg">
        <div class="container mx-auto px-4 py-4 space-y-1">
            <a href="{{ path('home') }}" class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-gray-50 font-medium transition" @click="mobileOpen = false">
                Accueil
            </a>
            <a href="{{ path('catalogue', {}) }}" class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-gray-50 font-medium transition" @click="mobileOpen = false">
                Catalogue
            </a>

            {# Catégories mobile #}
            {% set categories = app.request.attributes.get('_categories') %}
            {% if categories and categories|length > 0 %}
                <div x-data="{ catOpen: false }">
                    <button @click="catOpen = !catOpen" class="w-full flex items-center justify-between px-4 py-3 rounded-xl hover:bg-gray-50 font-medium transition">
                        <span>Catégories</span>
                        <svg class="w-4 h-4 transition-transform duration-200" :class="catOpen ? 'rotate-180' : ''" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    <div x-show="catOpen" x-transition class="ml-4 mt-1 space-y-1">
                        {% for category in categories %}
                            <a href="{{ path('categorie', {slug: category.slug}) }}" class="block px-4 py-2 rounded-lg hover:bg-gray-50 text-gray-700 transition" @click="mobileOpen = false">
                                {{ category.nom }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            <a href="{{ path('contact', {}) }}" class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-gray-50 font-medium transition" @click="mobileOpen = false">
                Contact
            </a>
            <a href="{{ path('presentation') }}" class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-gray-50 font-medium transition" @click="mobileOpen = false">
                À propos
            </a>

            <div class="pt-3 pb-1">
                <a href="{{ path('devis') }}" class="btn-primary block text-center py-3 w-full" @click="mobileOpen = false">
                    Demander un devis
                </a>
            </div>

            {# User section mobile #}
            <div class="border-t border-gray-100 pt-4 mt-2 space-y-1">
                {% if app.user %}
                    <div class="px-4 py-2 flex items-center gap-3 mb-2">
                        <div class="w-9 h-9 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center text-white text-sm font-bold flex-shrink-0">
                            {{ app.user.prenom|first }}{{ app.user.nom|first }}
                        </div>
                        <span class="font-semibold text-gray-900">{{ app.user.prenom }} {{ app.user.nom }}</span>
                    </div>
                    <a href="{{ path('profil', {}) }}" class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-gray-50 transition" @click="mobileOpen = false">Mon profil</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('admin_dashboard', {}) }}" class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-gray-50 transition" @click="mobileOpen = false">Administration</a>
                    {% endif %}
                    <a href="{{ path('logout', {}) }}" class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-red-50 text-red-600 transition" @click="mobileOpen = false">Déconnexion</a>
                {% else %}
                    <a href="{{ path('connexion', {}) }}" class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-gray-50 font-medium transition" @click="mobileOpen = false">Connexion</a>
                    <a href="{{ path('inscription', {}) }}" class="btn-outline block text-center py-3 w-full" @click="mobileOpen = false">S'inscrire</a>
                {% endif %}
            </div>
        </div>
    </div>
</nav>
