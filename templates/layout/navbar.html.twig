{# Navbar Component #}
<nav class="bg-white shadow-md sticky top-0 z-50">
    <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
            {# Logo #}
            <a href="{{ path('home') }}" class="flex items-center space-x-2">
                <img src="{{ asset('build/images/TDBR.png') }}" alt="TDBR Logo" class="h-12 w-auto">
                <span class="font-heading text-2xl font-bold gradient-text">TDBR</span>
            </a>

            {# Menu Desktop #}
            <div class="hidden md:flex items-center space-x-6">
                <a href="{{ path('home') }}" class="hover:text-primary transition">Accueil</a>
                <a href="{{ path('catalogue', {}) }}" class="hover:text-primary transition">Catalogue</a>

                {# Dropdown Catégories #}
                <div class="relative" x-data="{ open: false }">
                    <button @click="open = !open" @click.away="open = false" class="hover:text-primary transition flex items-center">
                        Catégories
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    <div x-show="open" x-transition class="absolute left-0 mt-2 w-48 bg-white shadow-lg rounded-lg py-2">
                        {% set categories = app.request.attributes.get('_categories') %}
                        {% if categories %}
                            {% for category in categories %}
                                <a href="{{ path('categorie', {slug: category.slug}) }}" class="block px-4 py-2 hover:bg-gray-100">
                                    {{ category.nom }}
                                </a>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>

                <a href="{{ path('contact', {}) }}" class="hover:text-primary transition">Contact</a>
                <a href="{{ path('presentation') }}" class="hover:text-primary transition">À propos</a>
            </div>

            {# Actions #}
            <div class="flex items-center space-x-4">
                {# Panier #}
                <a href="{{ path('panier', {}) }}" class="relative hover:text-primary transition">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    {% set cartCount = app.request.attributes.get('_cart_count', 0) %}
                    <span data-cart-count class="absolute -top-2 -right-2 bg-secondary text-white text-xs rounded-full w-5 h-5 flex items-center justify-center {{ cartCount > 0 ? '' : 'hidden' }}">
                        {{ cartCount }}
                    </span>
                </a>

                {# User Menu #}
                {% if app.user %}
                    <div class="relative" x-data="{ open: false }">
                        <button @click="open = !open" @click.away="open = false" class="flex items-center space-x-2 hover:text-primary transition">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                        </button>
                        <div x-show="open" x-transition class="absolute right-0 mt-2 w-48 bg-white shadow-lg rounded-lg py-2">
                            <a href="{{ path('profil', {}) }}" class="block px-4 py-2 hover:bg-gray-100">Mon profil</a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('admin_dashboard', {}) }}" class="block px-4 py-2 hover:bg-gray-100">Administration</a>
                            {% endif %}
                            <a href="{{ path('logout', {}) }}" class="block px-4 py-2 hover:bg-gray-100 text-red-600">Déconnexion</a>
                        </div>
                    </div>
                {% else %}
                    <a href="{{ path('connexion', {}) }}" class="hover:text-primary transition">Connexion</a>
                    <a href="{{ path('inscription', {}) }}" class="btn-primary text-sm">S'inscrire</a>
                {% endif %}
            </div>

            {# Mobile Menu Button #}
            <button class="md:hidden" x-data="{ open: false }" @click="$dispatch('toggle-mobile-menu')">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>
</nav>
